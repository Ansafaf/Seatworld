<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products - Admin</title>
    <style>
        body { font-family: Arial, Helvetica, sans-serif; background:#f5f5f5; margin:0; }
        .container { max-width: 1100px; margin: 40px auto; background:#ffffff; padding:24px; border-radius:8px; }
        .header { display:flex; justify-content: space-between; align-items:center; margin-bottom:16px; }
        .title { font-size:20px; font-weight:700; }
        .btn { background:#ff8c00; color:#fff; padding:10px 16px; text-decoration:none; border-radius:6px; font-weight:600; }
        .btn:hover { background:#e67e00; }
        table { width:100%; border-collapse: collapse; }
        th, td { text-align:left; padding:12px; border-bottom:1px solid #e5e5e5; font-size:14px; }
        th { color:#444; background:#fafafa; }
        tr:hover td { background:#fcfcfc; }
        .muted { color:#777; }
    </style>
    </head>
<body>
    <div class="container">
        <div class="header">
            <div class="title">Products</div>
            <a class="btn" href="/admin/add-product">+ Add Product</a>
        </div>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Brand</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Created</th>
                </tr>
            </thead>
            <tbody>
                <% if (products && products.length > 0) { %>
                    <% products.forEach(p => { %>
                        <tr>
                            <td><%= p.name %></td>
                            <td><%= p.brand %></td>
                            <td>₹ <%= Number(p.price).toFixed(2) %></td>
                            <td><span class="muted"><%= p.categoryId?.name || p.categoryId?.categoryName || '—' %></span></td>
                            <td><span class="muted"><%= new Date(p.createdAt).toLocaleDateString() %></span></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="5" class="muted">No products found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>


