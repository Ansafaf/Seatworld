<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Coupons</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background-color: #2c3e50;
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: 250px;
            background-color: #34495e;
            padding: 20px 0;
            display: flex;
            flex-direction: column;
        }

        .sidebar h2 {
            color: white;
            padding: 0 20px 30px;
            font-size: 24px;
        }

        .sidebar-menu {
            list-style: none;
            flex: 1;
        }

        .sidebar-menu li {
            margin-bottom: 5px;
        }

        .sidebar-menu a {
            display: flex;
            align-items: center;
            padding: 15px 20px;
            color: #bdc3c7;
            text-decoration: none;
            transition: background-color 0.3s;
        }

        .sidebar-menu a:hover {
            background-color: #2c3e50;
        }

        .sidebar-menu a.active {
            background-color: #2c3e50;
            color: #ff6b35;
        }

        .sidebar-menu a i {
            margin-right: 12px;
            width: 20px;
        }

        .logout {
            margin-top: auto;
            padding: 20px;
        }

        .logout a {
            color: #e74c3c;
            text-decoration: none;
            display: flex;
            align-items: center;
        }

        .logout a i {
            margin-right: 12px;
        }

        .main-content {
            flex: 1;
            padding: 40px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

        .header h1 {
            color: #ff6b35;
            font-size: 32px;
        }

        .search-box {
            position: relative;
        }

        .search-box input {
            padding: 12px 20px 12px 45px;
            border: none;
            border-radius: 8px;
            background-color: #1a252f;
            color: #bdc3c7;
            width: 300px;
            font-size: 14px;
        }

        .search-box input::placeholder {
            color: #7f8c8d;
        }

        .search-box i {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #7f8c8d;
        }

        .coupons-table {
            background-color: #1a252f;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        thead {
            background-color: #000;
        }

        th {
            padding: 20px;
            text-align: left;
            color: #ff6b35;
            font-weight: 600;
            font-size: 14px;
        }

        tbody tr {
            border-bottom: 1px solid #2c3e50;
        }

        tbody tr:last-child {
            border-bottom: none;
        }

        td {
            padding: 20px;
            color: #ecf0f1;
            font-size: 14px;
        }

        .discount-percentage {
            color: #3498db;
        }

        .discount-amount {
            color: #2ecc71;
        }

        .amount-red {
            color: #e74c3c;
        }

        .action-buttons {
            display: flex;
            gap: 10px;
        }

        .btn {
            padding: 8px 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 13px;
            font-weight: 500;
        }

        .btn-edit {
            background-color: #2ecc71;
            color: white;
        }

        .btn-delete {
            background-color: #e74c3c;
            color: white;
        }

        .btn-add {
            background-color: #ff6b35;
            color: white;
            padding: 12px 24px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 15px;
            font-weight: 600;
            margin: 20px;
        }

        .pagination {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
            padding: 20px;
        }

        .pagination button {
            padding: 8px 12px;
            background-color: #2c3e50;
            color: #ecf0f1;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .pagination button.active {
            background-color: #ff6b35;
        }

        .pagination button:hover:not(.active) {
            background-color: #34495e;
        }
    </style>
</head>

<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h2>Admin Panel</h2>
        <ul class="sidebar-menu">
            <li><a href="/admin/dashboard"><i>üìä</i> Dashboard</a></li>
            <li><a href="/admin/products"><i>üì¶</i> Products</a></li>
            <li><a href="/admin/customers"><i>üë•</i> Customers</a></li>
            <li><a href="/admin/orders"><i>üõí</i> Orders</a></li>
            <li><a href="/admin/coupons" class="active"><i>üéüÔ∏è</i> Coupons</a></li>
            <li><a href="/admin/categories"><i>üìÅ</i> Categories</a></li>
            <li><a href="/admin/discounts"><i>üè∑Ô∏è</i> Discounts</a></li>
            <li><a href="/admin/banner"><i>üñºÔ∏è</i> Banner</a></li>
            <li><a href="/admin/sales-report"><i>üìà</i> Sales Report</a></li>
        </ul>
        <div class="logout">
            <a href="/admin/logout"><i>üö™</i> Logout</a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="header">
            <h1>Coupons</h1>
            <div class="search-box">
                <i>üîç</i>
                <input type="text" placeholder="Search for Coupons">
            </div>
        </div>

        <div class="coupons-table">
            <table>
                <thead>
                    <tr>
                        <th>Coupon Code</th>
                        <th>Discount</th>
                        <th>Created Date</th>
                        <th>Expiry Date</th>
                        <th>Max Amount</th>
                        <th>Min Amount</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (coupons && coupons.length> 0) { %>
                        <% coupons.forEach(coupon=> { %>
                            <tr>
                                <td>
                                    <%= coupon.code %>
                                </td>
                                <td>
                                    <% if (coupon.discountType==='percentage' ) { %>
                                        <span class="discount-percentage">üè∑Ô∏è <%= coupon.discount %>%</span>
                                        <% } else { %>
                                            <span class="discount-amount">üí∞ ‚Çπ<%= coupon.discount %></span>
                                            <% } %>
                                </td>
                                <td>
                                    <%= new Date(coupon.createdDate).toLocaleDateString('en-GB') %>
                                </td>
                                <td>
                                    <%= new Date(coupon.expiryDate).toLocaleDateString('en-GB') %>
                                </td>
                                <td class="amount-red">
                                    <%= coupon.maxAmount ? '‚Çπ' + coupon.maxAmount : '‚Äî' %>
                                </td>
                                <td class="amount-red">‚Çπ<%= coupon.minAmount %>
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <button class="btn btn-edit"
                                            onclick="editCoupon('<%= coupon._id %>')">Edit</button>
                                        <button class="btn btn-delete"
                                            onclick="deleteCoupon('<%= coupon._id %>')">Delete</button>
                                    </div>
                                </td>
                            </tr>
                            <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="7" style="text-align: center; padding: 40px;">No coupons found</td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>

            <button class="btn-add" onclick="window.location.href='/admin/coupons/add'">Add new Coupon</button>

            <!-- Pagination -->
            <div class="pagination">
                <button>‚Äπ Previous</button>
                <button class="active">1</button>
                <button>2</button>
                <button>3</button>
                <button>...</button>
                <button>67</button>
                <button>68</button>
                <button>Next ‚Ä∫</button>
            </div>
        </div>
    </div>

    <script>
        function editCoupon(id) {
            window.location.href = `/admin/coupons/edit/${id}`;
        }

        function deleteCoupon(id) {
            if (confirm('Are you sure you want to delete this coupon?')) {
                fetch(`/admin/coupons/delete/${id}`, {
                    method: 'DELETE',
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            alert('Coupon deleted successfully');
                            window.location.reload();
                        } else {
                            alert('Failed to delete coupon');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('An error occurred');
                    });
            }
        }
    </script>
</body>

</html>