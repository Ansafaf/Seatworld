<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Coupons</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="/js/admin/common.js"></script>
    <link rel="stylesheet" href="/css/admin/couponList.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body class="font-display bg-gray-50 text-gray-800">
    <!-- Top Header -->
    <%- include('../partials/adminHeader') %>

        <div class="flex pt-16 min-h-screen">
            <!-- Sidebar -->
            <%- include('../partials/adminSidebar') %>

                <!-- Overlay -->
                <div id="sidebarOverlay" class="fixed inset-0 bg-black/20 z-30 hidden md:hidden backdrop-blur-sm"></div>

                <!-- Main Content -->
                <main class="flex-1 p-8 overflow-y-auto bg-white/50">
                    <!-- Header Section -->
                    <div class="coupon-header">
                        <h1 class="page-title">Coupons</h1>
                        <div class="header-actions">
                            <div class="search-box">
                                <svg class="search-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                                </svg>
                                <input type="text" id="searchInput" placeholder="Search for Coupons">
                            </div>
                            <button class="btn-add" onclick="window.location.href='/admin/coupons/add'">
                                Add new Coupon
                            </button>
                        </div>
                    </div>

                    <!-- Coupons Table -->
                    <div class="coupons-table-container">
                        <table class="coupons-table">
                            <thead>
                                <tr>
                                    <th>Coupon Code</th>
                                    <th>Discount</th>
                                    <th>Created Date</th>
                                    <th>Expiry Date</th>
                                    <th>Max Amount</th>
                                    <th>Min Amount</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (coupons && coupons.length> 0) { %>
                                    <% coupons.forEach(coupon=> { %>
                                        <tr>
                                            <td class="font-semibold">
                                                <%= coupon.couponCode %>
                                            </td>
                                            <td>
                                                <% if (coupon.discountType==='percentage' ) { %>
                                                    <%= coupon.discountValue %>%
                                                        <% } else { %>
                                                            ₹<%= coupon.discountValue %>
                                                                <% } %>
                                            </td>
                                            <td>
                                                <%= new Date(coupon.createdAt).toLocaleDateString('en-GB') %>
                                            </td>
                                            <td>
                                                <%= new Date(coupon.expiryDate).toLocaleDateString('en-GB') %>
                                            </td>
                                            <td class="amount-red">
                                                <%= coupon.maxAmount ? '₹' + coupon.maxAmount : '-----' %>
                                            </td>
                                            <td class="amount-red">₹<%= coupon.minAmount %>
                                            </td>
                                            <td>
                                                <% let statusColor, statusLabel; if (coupon.couponStatus==='active' ) {
                                                    statusColor='bg-green-100 text-green-800' ; statusLabel='Active' ; }
                                                    else if (coupon.couponStatus==='blocked' ) {
                                                    statusColor='bg-red-100 text-red-800' ; statusLabel='Blocked' ; }
                                                    else if (coupon.couponStatus==='expired' ) {
                                                    statusColor='bg-orange-100 text-orange-800' ; statusLabel='Expired'
                                                    ; } else { statusColor='bg-gray-100 text-gray-800' ;
                                                    statusLabel=coupon.couponStatus; } %>
                                                    <span
                                                        class="px-2 py-1 rounded-full text-xs font-semibold <%= statusColor %>">
                                                        <%= statusLabel %>
                                                    </span>
                                            </td>
                                            <td>
                                                <div class="action-buttons">
                                                    <button class="btn-edit" onclick="editCoupon('<%= coupon._id %>')">
                                                        Edit
                                                    </button>
                                                    <% if (coupon.couponStatus !=='expired' ) { %>
                                                        <button
                                                            class="btn-block <%= coupon.couponStatus === 'active' ? 'bg-red-600' : 'bg-green-600' %>"
                                                            onclick="toggleStatus('<%= coupon._id %>', '<%= coupon.couponStatus %>')">
                                                            <%= coupon.couponStatus==='active' ? 'Block' : 'Unblock' %>
                                                        </button>
                                                        <% } %>
                                                </div>
                                            </td>
                                        </tr>
                                        <% }); %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="7" style="text-align: center; padding: 40px;">
                                                        No coupons found
                                                    </td>
                                                </tr>
                                                <% } %>
                            </tbody>
                        </table>

                        <!-- Pagination -->
                        <%- include('../partials/pagination', { pagination: pagination || {}, query: typeof search
                            !=='undefined' && search ? 'search=' + search : '' }) %>
                    </div>
                </main>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script type="module" src="/js/admin/couponList.js"></script>
</body>

</html>