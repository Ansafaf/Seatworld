<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      background-color: #3b87d3;
    }

    .card {
      border: none;
    }

    .btn-sm {
      min-width: 70px;
    }

    @media (max-width: 576px) {
      h3 {
        font-size: 1.25rem;
      }

      .btn, .form-control {
        font-size: 0.9rem;
      }

      .table thead {
        display: none;
      }

      .table tbody td {
        display: block;
        text-align: right;
        padding-left: 50%;
        position: relative;
      }

      .table tbody td::before {
        content: attr(data-label);
        position: absolute;
        left: 10px;
        top: 10px;
        font-weight: bold;
        text-align: left;
      }

      .table-bordered > :not(caption) > * > * {
        border-width: 1px 0;
      }

      .table tbody tr {
        margin-bottom: 1rem;
        display: block;
        border-bottom: 2px solid #ddd;
      }

      .d-flex.justify-content-between {
        flex-direction: column;
        align-items: start !important;
        gap: 10px;
      }

      .input-group {
        flex-direction: column;
      }

      .input-group .form-control,
      .input-group .btn {
        width: 100%;
        border-radius: 0.5rem !important;
      }

      .input-group .btn {
        margin-top: 10px;
      }
    }
  </style>
</head>
<body>
  <div class="container my-4">
    <div class="card shadow-lg p-4 rounded-4">
      <!-- Header -->
      <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
        <h3 class="mb-2">Welcome, <span class="text-primary"> <%= admin?.name || 'Admin' %></span></h3>
        <div class="d-flex flex-wrap gap-2">
          <a href="/admin/logout" class="btn btn-outline-danger">Logout</a>
        </div>
      </div>

      <!-- Search Bar -->
      <!-- Remove the form, use plain div or class -->
  <!-- Remove the form, use plain div or class -->
<div class="input-group mb-4">
  <input type="text" id="Element" class="form-control rounded-start-pill" placeholder="Search user by email or name" />
</div>


      <!-- Users Table -->
      <div class="table-responsive">
        <table class="table table-bordered table-hover text-center align-middle">
          <thead class="table-dark">
            <tr>
              <th scope="col">Username</th>
              <th scope="col">Email</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody id="userResults">
            <% users.forEach(user => { %>
              <tr>
                <td data-label="Username"><%= user.name %></td>
                <td data-label="Email"><%= user.email %></td>
                <td data-label="Actions">
                  <a href="/admin/block/<%= user._id %>" class="btn btn-sm btn-danger me-2" onclick="return confirm('Are you sure you want to block this user?')">Block</a>
                  <a href="/admin/unblock/<%= user._id %>" class="btn btn-sm btn-primary">Unblock</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
<script>
  const searchInput = document.getElementById("Element");
  const userResults = document.getElementById("userResults");
  let debounceTimer;

  searchInput.addEventListener("input", () => {
    clearTimeout(debounceTimer);

    debounceTimer = setTimeout(() => {
      const query = searchInput.value.trim();

      fetch(`/admin/search?search=${encodeURIComponent(query)}`, {
        headers: {
          "X-Requested-With": "XMLHttpRequest" // To detect AJAX request
        }
      })
      .then(res => res.text())
      .then(html => {
        userResults.innerHTML = html;
      })
      .catch(err => {
        console.error("Search failed", err);
      });

    }, 300); // Wait 300ms after user stops typing
  });

</script>
</html>
