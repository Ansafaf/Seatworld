<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sales Report - Admin Panel</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="/js/admin/common.js"></script>
</head>

<body class="font-display bg-gray-50 text-gray-800">

    <!-- Top Header -->
    <%- include('../partials/adminHeader') %>

        <div class="flex pt-16 min-h-screen">
            <!-- Sidebar -->
            <%- include('../partials/adminSidebar') %>

                <!-- Overlay -->
                <div id="sidebarOverlay" class="fixed inset-0 bg-black/20 z-30 hidden md:hidden backdrop-blur-sm"></div>

                <!-- Main Content -->
                <main class="flex-1 p-8 overflow-y-auto bg-white/50">
                    <div class="max-w-7xl mx-auto">
                        <!-- Header Section -->
                        <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8">
                            <div>
                                <h1 class="text-2xl font-bold text-gray-800">Sales Report</h1>
                                <p class="text-gray-500 text-sm mt-1">Track and export your business performance</p>
                            </div>
                            <div class="flex gap-3">
                                <a href="/admin/sales-report/download-excel?startDate=<%= filters.startDate %>&endDate=<%= filters.endDate %>&quickFilter=<%= filters.quickFilter %>"
                                    class="inline-flex items-center justify-center px-4 py-2.5 bg-green-50 text-green-700 rounded-lg text-sm font-medium hover:bg-green-100 transition-colors border border-green-200 gap-2">
                                    <span class="material-icons-outlined text-lg">description</span>
                                    Download Excel
                                </a>
                                <a href="/admin/sales-report/download?startDate=<%= filters.startDate %>&endDate=<%= filters.endDate %>&quickFilter=<%= filters.quickFilter %>"
                                    class="inline-flex items-center justify-center px-4 py-2.5 bg-red-50 text-red-700 rounded-lg text-sm font-medium hover:bg-red-100 transition-colors border border-red-200 gap-2">
                                    <span class="material-icons-outlined text-lg">picture_as_pdf</span>
                                    Download PDF
                                </a>
                            </div>
                        </div>

                        <!-- Filter Section -->
                        <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100 mb-8">
                            <div class="flex items-center gap-6 mb-6 pb-6 border-b border-gray-50">
                                <span class="text-sm font-semibold text-gray-700">Filter By:</span>
                                <div class="flex items-center gap-4">
                                    <label class="flex items-center gap-2 cursor-pointer group">
                                        <input type="radio" name="filterMode" value="quick"
                                            class="w-4 h-4 text-indigo-600 focus:ring-indigo-500 border-gray-300"
                                            <%=(!filters.startDate && !filters.endDate) ? 'checked' : '' %>>
                                        <span
                                            class="text-sm text-gray-600 group-hover:text-gray-900 transition-colors">Quick
                                            Presets</span>
                                    </label>
                                    <label class="flex items-center gap-2 cursor-pointer group">
                                        <input type="radio" name="filterMode" value="custom"
                                            class="w-4 h-4 text-indigo-600 focus:ring-indigo-500 border-gray-300"
                                            <%=(filters.startDate || filters.endDate) ? 'checked' : '' %>>
                                        <span
                                            class="text-sm text-gray-600 group-hover:text-gray-900 transition-colors">Custom
                                            Date Range</span>
                                    </label>
                                </div>
                            </div>

                            <form id="salesReportForm" action="/admin/sales-report" method="GET"
                                class="grid grid-cols-1 md:grid-cols-4 gap-6 items-end">
                                <!-- Quick Filter Section -->
                                <div id="quickFilterSection"
                                    class="<%= (filters.startDate || filters.endDate) ? 'hidden' : '' %>">
                                    <label
                                        class="block text-xs font-medium text-gray-500 uppercase tracking-wider mb-2">Quick
                                        Filter</label>
                                    <select name="quickFilter" id="quickFilterSelect" onchange="this.form.submit()"
                                        class="w-full h-11 px-4 bg-gray-50 border border-gray-200 rounded-lg text-sm focus:outline-none focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 transition-colors">
                                        <option value="today" <%=filters.quickFilter==='today' ? 'selected' : '' %>
                                            >Today</option>
                                        <option value="thisWeek" <%=filters.quickFilter==='thisWeek' ? 'selected' : ''
                                            %>>This Week</option>
                                        <option value="thisMonth" <%=filters.quickFilter==='thisMonth' ||
                                            !filters.quickFilter ? 'selected' : '' %>>This Month</option>
                                        <option value="thisYear" <%=filters.quickFilter==='thisYear' ? 'selected' : ''
                                            %>>This Year</option>
                                    </select>
                                </div>

                                <!-- Custom Date Section -->
                                <div id="customDateSection"
                                    class="md:col-span-3 grid grid-cols-1 md:grid-cols-3 gap-6 <%= (!filters.startDate && !filters.endDate) ? 'hidden' : '' %>">
                                    <!-- Start Date -->
                                    <div>
                                        <label
                                            class="block text-xs font-medium text-gray-500 uppercase tracking-wider mb-2">Start
                                            Date</label>
                                        <input type="date" name="startDate" id="startDate"
                                            value="<%= filters.startDate %>"
                                            class="w-full h-11 px-4 bg-gray-50 border border-gray-200 rounded-lg text-sm focus:outline-none focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 transition-colors">
                                    </div>

                                    <!-- End Date -->
                                    <div>
                                        <label
                                            class="block text-xs font-medium text-gray-500 uppercase tracking-wider mb-2">End
                                            Date</label>
                                        <input type="date" name="endDate" id="endDate" value="<%= filters.endDate %>"
                                            class="w-full h-11 px-4 bg-gray-50 border border-gray-200 rounded-lg text-sm focus:outline-none focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 transition-colors">
                                    </div>

                                    <!-- Generate Button -->
                                    <div>
                                        <button type="submit"
                                            class="w-full h-11 inline-flex items-center justify-center px-4 bg-indigo-600 text-white rounded-lg text-sm font-medium hover:bg-indigo-700 transition-colors shadow-sm">
                                            Generate Report
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>

                        <!-- Stats Cards Section -->
                        <div class="space-y-6 mb-8">
                            <!-- Row 1: Primary Metrics -->
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                                <!-- Total Orders -->
                                <div
                                    class="bg-white p-6 rounded-xl shadow-sm border border-gray-100 flex items-center justify-between">
                                    <div>
                                        <div class="text-xs font-semibold text-gray-400 uppercase tracking-wider mb-1">
                                            Total Orders</div>
                                        <div class="text-3xl font-bold text-gray-900">
                                            <%= salesData.totalOrders.toLocaleString('en-IN') %>
                                        </div>
                                    </div>
                                    <div
                                        class="w-12 h-12 bg-blue-50 rounded-lg flex items-center justify-center text-blue-600">
                                        <span class="material-icons-outlined">shopping_bag</span>
                                    </div>
                                </div>

                                <!-- Net Sales (Total Sales) -->
                                <div
                                    class="bg-white p-6 rounded-xl shadow-sm border border-gray-100 flex items-center justify-between ring-2 ring-indigo-500 ring-offset-2">
                                    <div>
                                        <div
                                            class="text-xs font-semibold text-indigo-500 uppercase tracking-wider mb-1">
                                            Net Revenue</div>
                                        <div class="text-3xl font-bold text-gray-900">
                                            ₹<%= salesData.totalSales.toLocaleString('en-IN') %>
                                        </div>
                                    </div>
                                    <div
                                        class="w-12 h-12 bg-indigo-50 rounded-lg flex items-center justify-center text-indigo-600">
                                        <span class="material-icons-outlined">payments</span>
                                    </div>
                                </div>

                                <!-- Total Discount -->
                                <div
                                    class="bg-white p-6 rounded-xl shadow-sm border border-gray-100 flex items-center justify-between">
                                    <div>
                                        <div class="text-xs font-semibold text-gray-400 uppercase tracking-wider mb-1">
                                            Total Discount</div>
                                        <div class="text-3xl font-bold text-red-600">
                                            ₹<%= salesData.totalDiscount.toLocaleString('en-IN') %>
                                        </div>
                                    </div>
                                    <div
                                        class="w-12 h-12 bg-red-50 rounded-lg flex items-center justify-center text-red-600">
                                        <span class="material-icons-outlined">sell</span>
                                    </div>
                                </div>
                            </div>

                            <!-- Row 2: Secondary Metrics -->
                            <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
                                <!-- Gross Sales -->
                                <div
                                    class="bg-white p-5 rounded-xl shadow-sm border border-gray-100 flex items-center justify-between">
                                    <div>
                                        <div class="text-xs font-medium text-gray-500 mb-1">Gross Sales</div>
                                        <div class="text-xl font-bold text-gray-800">
                                            ₹<%= salesData.grossSales.toLocaleString('en-IN') %>
                                        </div>
                                    </div>
                                    <div class="text-gray-400">
                                        <span class="material-icons-outlined text-xl">account_balance_wallet</span>
                                    </div>
                                </div>

                                <!-- Shipping Fees -->
                                <div
                                    class="bg-white p-5 rounded-xl shadow-sm border border-gray-100 flex items-center justify-between">
                                    <div>
                                        <div class="text-xs font-medium text-gray-500 mb-1">Shipping Rev.</div>
                                        <div class="text-xl font-bold text-gray-800">
                                            ₹<%= salesData.totalShipping.toLocaleString('en-IN') %>
                                        </div>
                                    </div>
                                    <div class="text-gray-400">
                                        <span class="material-icons-outlined text-xl">local_shipping</span>
                                    </div>
                                </div>

                                <!-- Refunded Amount -->
                                <div
                                    class="bg-white p-5 rounded-xl shadow-sm border border-gray-100 flex items-center justify-between">
                                    <div>
                                        <div class="text-xs font-medium text-gray-500 mb-1">Refunded</div>
                                        <div class="text-xl font-bold text-orange-600">
                                            ₹<%= salesData.totalRefunded.toLocaleString('en-IN') %>
                                        </div>
                                    </div>
                                    <div class="text-gray-400">
                                        <span class="material-icons-outlined text-xl">history</span>
                                    </div>
                                </div>

                                <!-- Coupons Used -->
                                <div
                                    class="bg-white p-5 rounded-xl shadow-sm border border-gray-100 flex items-center justify-between">
                                    <div>
                                        <div class="text-xs font-medium text-gray-500 mb-1">Coupons Used</div>
                                        <div class="text-xl font-bold text-gray-800">
                                            <%= salesData.couponsUsed %>
                                        </div>
                                    </div>
                                    <div class="text-gray-400">
                                        <span class="material-icons-outlined text-xl">confirmation_number</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Transaction Details Table -->
                        <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
                            <div class="p-6 border-b border-gray-100">
                                <h3 class="text-lg font-bold text-gray-800">Transaction Details</h3>
                            </div>
                            <div class="overflow-x-auto">
                                <table class="w-full text-left text-sm text-gray-600">
                                    <thead class="bg-gray-50 text-xs uppercase font-medium text-gray-500">
                                        <tr>
                                            <th class="px-6 py-4">Order ID</th>
                                            <th class="px-6 py-4 whitespace-nowrap">Date</th>
                                            <th class="px-6 py-4">Customer</th>
                                            <th class="px-6 py-4">Items</th>
                                            <th class="px-6 py-4">Amount</th>
                                            <th class="px-6 py-4">Discount</th>
                                            <th class="px-6 py-4">Status</th>
                                        </tr>
                                    </thead>
                                    <tbody class="divide-y divide-gray-100">
                                        <% if (salesData.transactions && salesData.transactions.length> 0) { %>
                                            <% salesData.transactions.forEach(t=> { %>
                                                <tr class="hover:bg-gray-50 transition-colors">
                                                    <td class="px-6 py-4">
                                                        <span class="font-medium text-indigo-600 uppercase">
                                                            #<%= t.orderId.toString().slice(-6) %>
                                                        </span>
                                                    </td>
                                                    <td class="px-6 py-4 whitespace-nowrap">
                                                        <%= new Date(t.date).toLocaleDateString('en-IN', {
                                                            day: '2-digit' , month: 'short' }) %>
                                                    </td>
                                                    <td class="px-6 py-4">
                                                        <div class="flex flex-col">
                                                            <span class="text-sm font-semibold text-gray-900">
                                                                <%= t.customer.name %>
                                                            </span>
                                                            <span class="text-xs text-gray-500">
                                                                <%= t.customer.email %>
                                                            </span>
                                                        </div>
                                                    </td>
                                                    <td class="px-6 py-4 text-center">
                                                        <span
                                                            class="px-2 py-1 bg-gray-100 rounded text-xs font-semibold text-gray-600">
                                                            <%= t.itemCount %>
                                                        </span>
                                                    </td>
                                                    <td class="px-6 py-4 font-bold text-gray-900">
                                                        ₹<%= t.totalAmount.toLocaleString('en-IN') %>
                                                    </td>
                                                    <td class="px-6 py-4 text-red-600 font-medium">
                                                        -₹<%= t.discount.toLocaleString('en-IN') %>
                                                    </td>
                                                    <td class="px-6 py-4">
                                                        <% const status=t.status.toLowerCase(); let
                                                            badgeClass="bg-gray-100 text-gray-800" ; if
                                                            (status.includes('delivered'))
                                                            badgeClass="bg-green-100 text-green-800" ; else if
                                                            (status.includes('cancelled') ||
                                                            status.includes('returned'))
                                                            badgeClass="bg-red-100 text-red-800" ; else if
                                                            (status.includes('shipped'))
                                                            badgeClass="bg-blue-100 text-blue-800" ; else if
                                                            (status.includes('pending') || status.includes('confirmed'))
                                                            badgeClass="bg-yellow-100 text-yellow-800" ; %>
                                                            <span
                                                                class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-bold uppercase tracking-wider <%= badgeClass %>">
                                                                <%= t.status %>
                                                            </span>
                                                    </td>
                                                </tr>
                                                <% }); %>
                                                    <% } else { %>
                                                        <tr>
                                                            <td colspan="5" class="px-6 py-8 text-center text-gray-500">
                                                                No transactions found for the selected period.
                                                            </td>
                                                        </tr>
                                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                            <!-- Pagination could go here if implemented -->
                        </div>

                    </div>
                </main>
        </div>

        <script src="/js/admin/salesReport.js"></script>
        <!-- Include Date Range Logic if custom JS needed, else straightforward form submission -->
</body>

</html>