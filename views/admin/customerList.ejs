<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta content="width=device-width, initial-scale=1.0" name="viewport" />
  <title>Admin Panel - Customers</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet" />
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: "#F97316",
            secondary: "#1F2937",
          },
          fontFamily: {
            display: ["Inter", "sans-serif"],
          },
        },
      },
    };
  </script>
  <style>
    /* Custom styles for table header rounding */
    thead tr th:first-child {
      border-top-left-radius: 0.5rem;
      border-bottom-left-radius: 0.5rem;
    }

    thead tr th:last-child {
      border-top-right-radius: 0.5rem;
      border-bottom-right-radius: 0.5rem;
    }

    /* Pagination Styling */
    .pagination-container {
      display: flex;
      justify-content: center;
      margin-top: 32px;
      padding-bottom: 16px;
    }

    .pagination-bar {
      background: white;
      display: flex;
      align-items: center;
      padding: 8px 16px;
      border-radius: 9999px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
      border: 1px solid #f3f4f6;
      gap: 8px;
    }

    .pagination-nav-link {
      display: flex;
      align-items: center;
      gap: 4px;
      padding: 6px 16px;
      border-radius: 9999px;
      color: #4b5563;
      font-size: 0.875rem;
      font-weight: 600;
      transition: all 0.2s;
      text-decoration: none;
    }

    .pagination-nav-link:hover:not(.disabled) {
      background-color: #f3f4f6;
      color: #111827;
    }

    .pagination-nav-link.disabled {
      color: #d1d5db;
      cursor: not-allowed;
    }

    .pagination-numbers {
      display: flex;
      align-items: center;
      gap: 4px;
      padding: 0 8px;
      border-left: 1px solid #e5e7eb;
      border-right: 1px solid #e5e7eb;
      margin: 0 8px;
    }

    .pagination-number {
      width: 36px;
      height: 36px;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 9999px;
      color: #6b7280;
      font-size: 0.875rem;
      font-weight: 500;
      transition: all 0.2s;
      text-decoration: none;
    }

    .pagination-number:hover:not(.active) {
      background-color: #f3f4f6;
      color: #111827;
    }

    .pagination-number.active {
      background-color: #F97316;
      color: white;
      font-weight: 700;
      box-shadow: 0 4px 10px rgba(249, 115, 22, 0.3);
    }

    .pagination-dots {
      color: #9ca3af;
      padding: 0 4px;
    }
  </style>
  <style>
    /* Message alert animation */
    @keyframes slideIn {
      from {
        opacity: 0;
        transform: translateY(-20px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .animate-slideIn {
      animation: slideIn 0.4s ease-out;
    }

    @keyframes fadeOut {
      from {
        opacity: 1;
        transform: translateY(0);
      }

      to {
        opacity: 0;
        transform: translateY(-20px);
      }
    }

    .animate-fadeOut {
      animation: fadeOut 0.3s ease-in forwards;
    }
  </style>
</head>

<body class="font-display bg-gray-100 text-gray-800">
  <!-- Top Header -->
  <header class="bg-white shadow-sm fixed w-full z-50 h-16 flex items-center justify-between px-6">
    <div class="flex items-center gap-4">
      <button id="mobileMenuBtn" class="md:hidden text-gray-500 hover:text-gray-700">
        <span class="material-icons-outlined">menu</span>
      </button>
      <h1 class="text-xl font-bold text-gray-800 flex items-center gap-2">
        <span class="w-3 h-3 bg-gray-800 rounded-sm"></span>
        Admin Panel
      </h1>
    </div>
    <div class="flex items-center gap-8">
      <nav class="hidden md:flex items-center gap-6 text-sm font-medium text-gray-600">
        <a href="/admin/dashboard" class="hover:text-indigo-600 transition-colors">Dashboard</a>
        <a href="/admin/products" class="hover:text-indigo-600 transition-colors">Products</a>
        <a href="/admin/orders" class="hover:text-indigo-600 transition-colors">Orders</a>
        <a href="/admin/users" class="text-indigo-600 transition-colors">Customers</a>
      </nav>
      <div class="flex items-center gap-3 pl-6 border-l border-gray-200">
        <div class="w-8 h-8 rounded-full bg-gray-200 overflow-hidden">
          <img src="https://ui-avatars.com/api/?name=Admin&background=random" alt="Admin"
            class="w-full h-full object-cover">
        </div>
      </div>
    </div>
  </header>

  <div class="flex pt-16 min-h-screen">
    <!-- Sidebar -->
    <aside id="adminSidebar"
      class="w-64 bg-white flex flex-col fixed inset-y-0 left-0 z-40 transform -translate-x-full transition-transform duration-300 md:translate-x-0 md:static border-r border-gray-100 pt-16 md:pt-0">

      <div class="p-6">
        <!-- Sidebar Header -->
        <div class="flex items-center gap-2 text-2xl font-bold text-gray-800 mb-8">
          <span class="material-icons-outlined">hexagon</span>
          <span>Customers</span>
          <span class="text-xs font-normal text-gray-400 mt-1">v.01</span>
        </div>

        <!-- Navigation Menu -->
        <nav class="space-y-2">
          <!-- Dashboard -->
          <a href="/admin/dashboard"
            class="flex items-center px-4 py-3 text-gray-700 hover:bg-gray-50 rounded-xl transition-all duration-200 group">
            <span class="material-icons-outlined mr-3 text-xl">dashboard</span>
            <span class="font-medium flex-1">Dashboard</span>
            <span class="material-icons-outlined text-gray-400 text-sm">chevron_right</span>
          </a>

          <!-- Product -->
          <a href="/admin/products"
            class="flex items-center px-4 py-3 text-gray-700 hover:bg-gray-50 rounded-xl transition-all duration-200 group">
            <span class="material-icons-outlined mr-3 text-xl">inventory_2</span>
            <span class="font-medium flex-1">Product</span>
            <span class="material-icons-outlined text-gray-400 text-sm">chevron_right</span>
          </a>

          <!-- Customers (Active) -->
          <a href="/admin/users"
            class="flex items-center px-4 py-3 bg-indigo-600 text-white rounded-xl transition-all duration-200 shadow-lg shadow-indigo-200">
            <span class="material-icons-outlined mr-3 text-xl">people</span>
            <span class="font-medium flex-1">Customers</span>
            <span class="material-icons-outlined text-sm">chevron_right</span>
          </a>

          <!-- Orders -->
          <a href="/admin/orders"
            class="flex items-center px-4 py-3 text-gray-700 hover:bg-gray-50 rounded-xl transition-all duration-200 group">
            <span class="material-icons-outlined mr-3 text-xl">shopping_cart</span>
            <span class="font-medium flex-1">Orders</span>
            <span class="material-icons-outlined text-gray-400 text-sm">chevron_right</span>
          </a>

          <!-- Categories -->
          <a href="/admin/categories"
            class="flex items-center px-4 py-3 text-gray-700 hover:bg-gray-50 rounded-xl transition-all duration-200 group">
            <span class="material-icons-outlined mr-3 text-xl">category</span>
            <span class="font-medium flex-1">Categories</span>
            <span class="material-icons-outlined text-gray-400 text-sm">chevron_right</span>
          </a>

          <!-- Discounts -->
          <a href="/admin/discounts"
            class="flex items-center px-4 py-3 text-gray-700 hover:bg-gray-50 rounded-xl transition-all duration-200 group">
            <span class="material-icons-outlined mr-3 text-xl">local_offer</span>
            <span class="font-medium flex-1">Discounts</span>
            <span class="material-icons-outlined text-gray-400 text-sm">chevron_right</span>
          </a>

          <!-- Coupons -->
          <a href="/admin/coupons"
            class="flex items-center px-4 py-3 text-gray-700 hover:bg-gray-50 rounded-xl transition-all duration-200 group">
            <span class="material-icons-outlined mr-3 text-xl">confirmation_number</span>
            <span class="font-medium flex-1">Coupons</span>
            <span class="material-icons-outlined text-gray-400 text-sm">chevron_right</span>
          </a>

          <!-- Banner -->
          <a href="/admin/banner"
            class="flex items-center px-4 py-3 text-gray-700 hover:bg-gray-50 rounded-xl transition-all duration-200 group">
            <span class="material-icons-outlined mr-3 text-xl">image</span>
            <span class="font-medium flex-1">Banner</span>
            <span class="material-icons-outlined text-gray-400 text-sm">chevron_right</span>
          </a>

          <!-- Sales Report -->
          <a href="/admin/sales-report"
            class="flex items-center px-4 py-3 text-gray-700 hover:bg-gray-50 rounded-xl transition-all duration-200 group">
            <span class="material-icons-outlined mr-3 text-xl">bar_chart</span>
            <span class="font-medium flex-1">Sales report</span>
            <span class="material-icons-outlined text-gray-400 text-sm">chevron_right</span>
          </a>

          <!-- Logout -->
          <div class="pt-6 mt-6">
            <a href="/admin/logout"
              class="flex items-center justify-center px-4 py-3 text-red-500 hover:bg-red-50 rounded-xl transition-all duration-200 font-medium">
              Logout
            </a>
          </div>
        </nav>
      </div>
    </aside>

    <!-- Overlay -->
    <div id="sidebarOverlay" class="fixed inset-0 bg-black/20 z-30 hidden md:hidden backdrop-blur-sm"></div>

    <!-- Main Content -->
    <main class="flex-1 p-8 overflow-y-auto">
      <div class="max-w-7xl mx-auto">

        <!-- Message Alert -->
        <%- include('../partials/flash') %>
          <!-- Header Actions -->
          <div class="flex flex-col md:flex-row justify-between items-center mb-8 gap-4">
            <div class="hidden md:block"></div>

            <div class="flex flex-col md:flex-row items-center gap-4 w-full md:w-auto ml-auto">
              <form action="/admin/users" method="GET" class="relative w-full md:w-80">
                <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
                  <span class="material-icons-outlined text-xl">search</span>
                </span>
                <input type="text" id="searchInput" name="search" value="<%= search %>"
                  placeholder="Search for customers"
                  class="w-full py-2.5 pl-10 pr-4 bg-white text-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500/20 shadow-sm">
              </form>
            </div>
          </div>

          <!-- Table Card -->
          <div class="bg-white rounded-2xl shadow-sm p-8 min-h-[600px] relative">
            <div class="overflow-x-auto">
              <table class="w-full whitespace-nowrap border-separate border-spacing-y-4" id="customersTable">
                <thead>
                  <tr class="bg-[#C4C4C4]">
                    <th class="px-6 py-4 text-sm font-bold text-gray-900 text-left">ID</th>
                    <th class="px-6 py-4 text-sm font-bold text-gray-900 text-left">Name</th>
                    <th class="px-6 py-4 text-sm font-bold text-gray-900 text-left">Email</th>
                    <th class="px-6 py-4 text-sm font-bold text-gray-900 text-left">Status</th>
                    <th class="px-6 py-4 text-sm font-bold text-gray-900 text-left">Action</th>
                  </tr>
                </thead>
                <tbody class="">
                  <% if (users && users.length> 0) { %>
                    <% users.forEach((user, index)=> { %>
                      <tr class="hover:bg-gray-50 transition-colors duration-150 customer-row">
                        <td class="px-6 py-4 text-sm font-bold text-gray-900">
                          <%= (currentPage - 1) * limit + index + 1 %>
                        </td>
                        <td class="px-6 py-4 text-sm font-bold text-gray-900 name-cell">
                          <%= user.name || user.username || 'N/A' %>
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-600 email-cell">
                          <%= user.email || 'N/A' %>
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-600">
                          <%= user.status %>
                        </td>
                        <td class="px-6 py-4 text-sm">
                          <button onclick="handleAction('/admin/users/<%= user._id %>/unblock', 'unblock')"
                            class="inline-flex items-center justify-center px-4 py-1.5 bg-[#008000] hover:bg-green-800 text-white text-xs font-bold rounded transition-colors duration-200 mr-2">
                            Unblock
                          </button>
                          <button onclick="handleAction('/admin/users/<%= user._id %>/block', 'block')"
                            class="inline-flex items-center justify-center px-4 py-1.5 bg-[#B91C1C] hover:bg-red-800 text-white text-xs font-bold rounded transition-colors duration-200">
                            Block
                          </button>
                        </td>
                      </tr>
                      <% }) %>
                        <% } else { %>
                          <tr>
                            <td colspan="5" class="px-6 py-10 text-center text-gray-500">
                              No customers found.
                            </td>
                          </tr>
                          <% } %>
                </tbody>
              </table>
            </div>

            <!-- Pagination -->
            <!-- Pagination -->
            <% if (totalPages> 1) { %>
              <div class="pagination-container">
                <div class="pagination-bar">
                  <!-- Previous Button -->
                  <% if (currentPage> 1) { %>
                    <a href="/admin/users?page=<%= currentPage - 1 %>&search=<%= search %>" class="pagination-nav-link">
                      <span class="material-icons-outlined">arrow_back</span>
                      <span>Prev</span>
                    </a>
                    <% } else { %>
                      <span class="pagination-nav-link disabled">
                        <span class="material-icons-outlined">arrow_back</span>
                        <span>Prev</span>
                      </span>
                      <% } %>

                        <!-- Page Numbers -->
                        <div class="pagination-numbers">
                          <% let startPage=Math.max(1, currentPage - 2); let endPage=Math.min(totalPages, currentPage +
                            2); if (currentPage <=3) { startPage=1; endPage=Math.min(totalPages, 5); } else if
                            (currentPage>= totalPages - 2) {
                            startPage = Math.max(1, totalPages - 4);
                            endPage = totalPages;
                            }
                            %>

                            <% if (startPage> 1) { %>
                              <a href="/admin/users?page=1&search=<%= search %>" class="pagination-number">1</a>
                              <% if (startPage> 2) { %>
                                <span class="pagination-dots">...</span>
                                <% } %>
                                  <% } %>

                                    <% for (let i=startPage; i <=endPage; i++) { %>
                                      <a href="/admin/users?page=<%= i %>&search=<%= search %>"
                                        class="pagination-number <%= currentPage === i ? 'active' : '' %>">
                                        <%= i %>
                                      </a>
                                      <% } %>

                                        <% if (endPage < totalPages) { %>
                                          <% if (endPage < totalPages - 1) { %>
                                            <span class="pagination-dots">...</span>
                                            <% } %>
                                              <a href="/admin/users?page=<%= totalPages %>&search=<%= search %>"
                                                class="pagination-number">
                                                <%= totalPages %>
                                              </a>
                                              <% } %>
                        </div>

                        <!-- Next Button -->
                        <% if (currentPage < totalPages) { %>
                          <a href="/admin/users?page=<%= currentPage + 1 %>&search=<%= search %>"
                            class="pagination-nav-link">
                            <span>Next</span>
                            <span class="material-icons-outlined">arrow_forward</span>
                          </a>
                          <% } else { %>
                            <span class="pagination-nav-link disabled">
                              <span>Next</span>
                              <span class="material-icons-outlined">arrow_forward</span>
                            </span>
                            <% } %>
                </div>
              </div>
              <% } %>
          </div>
      </div>
    </main>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    const sidebar = document.getElementById("adminSidebar");
    const mobileMenuBtn = document.getElementById("mobileMenuBtn");
    const sidebarOverlay = document.getElementById("sidebarOverlay");

    const toggleSidebar = () => {
      const isClosed = sidebar.classList.contains("-translate-x-full");
      if (isClosed) {
        sidebar.classList.remove("-translate-x-full");
        sidebarOverlay.classList.remove("hidden");
        document.body.classList.add("overflow-hidden");
      } else {
        sidebar.classList.add("-translate-x-full");
        sidebarOverlay.classList.add("hidden");
        document.body.classList.remove("overflow-hidden");
      }
    };

    if (mobileMenuBtn) mobileMenuBtn.addEventListener("click", toggleSidebar);
    if (sidebarOverlay) sidebarOverlay.addEventListener("click", toggleSidebar);

    // Debounced search functionality
    const searchInput = document.getElementById('searchInput');
    let searchTimeout;

    if (searchInput) {
      searchInput.addEventListener('input', (e) => {
        const searchTerm = e.target.value;

        // Clear previous timeout
        clearTimeout(searchTimeout);

        // Set new timeout for debouncing (500ms delay)
        searchTimeout = setTimeout(() => {
          // Get current page from URL or default to 1
          const urlParams = new URLSearchParams(window.location.search);
          const currentPage = urlParams.get('page') || '1';

          // Navigate to search results (reset to page 1 for new search)
          window.location.href = `/admin/users?page=1&search=${encodeURIComponent(searchTerm)}`;
        }, 500);
      });
    }

    function handleAction(url, action) {
      const title = action === 'block' ? 'Block User?' : 'Unblock User?';
      const text = action === 'block'
        ? "Are you sure you want to block this user? They won't be able to login."
        : "Are you sure you want to unblock this user?";
      const confirmBtnColor = action === 'block' ? '#B91C1C' : '#008000';

      Swal.fire({
        title: title,
        text: text,
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: confirmBtnColor,
        cancelButtonColor: '#3085d6',
        confirmButtonText: 'Yes, proceed!'
      }).then((result) => {
        if (result.isConfirmed) {
          window.location.href = url;
        }
      })
    }

    // Message alert dismiss functionality
    function dismissMessage() {
      const messageAlert = document.getElementById('messageAlert');
      if (messageAlert) {
        messageAlert.classList.remove('animate-slideIn');
        messageAlert.classList.add('animate-fadeOut');
        setTimeout(() => {
          messageAlert.remove();
        }, 300);
      }
    }

    // Auto-dismiss message after 5 seconds
    window.addEventListener('DOMContentLoaded', () => {
      const messageAlert = document.getElementById('messageAlert');
      if (messageAlert) {
        setTimeout(() => {
          dismissMessage();
        }, 5000);
      }
    });
  </script>
</body>

</html>