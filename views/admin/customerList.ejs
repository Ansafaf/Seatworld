<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta content="width=device-width, initial-scale=1.0" name="viewport" />
  <title>Admin Panel - Customers</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet" />
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="/js/admin/common.js"></script>
  <script src="/js/common/pagination.js" defer></script>
  <link rel="stylesheet" href="/css/admin/customerList.css">
</head>

<body class="font-display bg-gray-100 text-gray-800">
  <!-- Top Header -->
  <%- include('../partials/adminHeader') %>

    <div class="flex pt-16 min-h-screen">
      <!-- Sidebar -->
      <%- include('../partials/adminSidebar') %>

        <!-- Overlay -->
        <div id="sidebarOverlay" class="fixed inset-0 bg-black/20 z-30 hidden md:hidden backdrop-blur-sm"></div>

        <!-- Main Content -->
        <main class="flex-1 p-8 overflow-y-auto">
          <div class="max-w-7xl mx-auto">

            <!-- Message Alert -->
            <!-- Header Actions -->
            <div class="flex flex-col md:flex-row justify-between items-center mb-8 gap-4">
              <div class="hidden md:block"></div>

              <div class="flex flex-col md:flex-row items-center gap-4 w-full md:w-auto ml-auto">
                <form action="/admin/users" method="GET" class="relative w-full md:w-80">
                  <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
                    <span class="material-icons-outlined text-xl">search</span>
                  </span>
                  <input type="text" id="searchInput" name="search" value="<%= search %>"
                    placeholder="Search for customers"
                    class="w-full py-2.5 pl-10 pr-4 bg-white text-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500/20 shadow-sm">
                </form>
              </div>
            </div>

            <!-- Table Card -->
            <div class="bg-white rounded-2xl shadow-sm p-8 min-h-[600px] relative">
              <div class="overflow-x-auto">
                <table class="w-full whitespace-nowrap border-separate border-spacing-y-4" id="customersTable">
                  <thead>
                    <tr class="bg-[#C4C4C4]">
                      <th class="px-6 py-4 text-sm font-bold text-gray-900 text-left">ID</th>
                      <th class="px-6 py-4 text-sm font-bold text-gray-900 text-left">Name</th>
                      <th class="px-6 py-4 text-sm font-bold text-gray-900 text-left">Email</th>
                      <th class="px-6 py-4 text-sm font-bold text-gray-900 text-left">Status</th>
                      <th class="px-6 py-4 text-sm font-bold text-gray-900 text-left">Action</th>
                    </tr>
                  </thead>
                  <tbody id="customerTableBody" class="">
                    <% if (users && users.length> 0) { %>
                      <% users.forEach((user, index)=> { %>
                        <tr data-user-id="<%= user._id %>"
                          class="hover:bg-gray-50 transition-colors duration-150 customer-row">
                          <td class="px-6 py-4 text-sm font-bold text-gray-900">
                            <%= (currentPage - 1) * limit + index + 1 %>
                          </td>
                          <td class="px-6 py-4 text-sm font-bold text-gray-900 name-cell">
                            <%= user.name || user.username || 'N/A' %>
                          </td>
                          <td class="px-6 py-4 text-sm text-gray-600 email-cell">
                            <%= user.email || 'N/A' %>
                          </td>
                          <td class="px-6 py-4 text-sm text-gray-600 status-cell">
                            <span
                              class="status-badge px-2 inline-flex text-xs leading-5 font-semibold rounded-full capitalize <%= user.status === 'active' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                              <%= user.status %>
                            </span>
                          </td>
                          <td class="px-6 py-4 text-sm action-cell">
                            <div class="flex items-center gap-2 action-btn-container">
                              <% if (user.status==='blocked' ) { %>
                                <button onclick="handleAction('/admin/users/<%= user._id %>/unblock', 'unblock')"
                                  class="action-btn inline-flex items-center justify-center px-4 py-1.5 bg-green-600 hover:bg-green-700 text-white text-xs font-bold rounded transition-colors duration-200">
                                  Unblock
                                </button>
                                <% } else { %>
                                  <button onclick="handleAction('/admin/users/<%= user._id %>/block', 'block')"
                                    class="action-btn inline-flex items-center justify-center px-4 py-1.5 bg-red-600 hover:bg-red-700 text-white text-xs font-bold rounded transition-colors duration-200">
                                    Block
                                  </button>
                                  <% } %>
                            </div>
                          </td>
                        </tr>
                        <% }) %>
                          <% } else { %>
                            <tr>
                              <td colspan="5" class="px-6 py-10 text-center text-gray-500">
                                No customers found.
                              </td>
                            </tr>
                            <% } %>
                  </tbody>
                </table>
              </div>

              <!-- Pagination -->
              <%- include('../partials/pagination', { pagination, query: 'search=' + search }) %>
            </div>
          </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script type="module" src="/js/admin/customerList.js"></script>
</body>

</html>