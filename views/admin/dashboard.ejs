<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Admin Panel - Dashboard</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="/js/admin/common.js"></script>
</head>

<body class="font-display bg-gray-50 text-gray-800">
    <!-- Top Header -->
    <%- include('../partials/adminHeader') %>

        <div class="flex pt-16 min-h-screen">
            <!-- Sidebar -->
            <%- include('../partials/adminSidebar') %>

                <!-- Overlay -->
                <div id="sidebarOverlay" class="fixed inset-0 bg-black/20 z-30 hidden md:hidden backdrop-blur-sm"></div>

                <!-- Main Content -->
                <main class="flex-1 p-8 overflow-y-auto bg-white/50">
                    <div class="max-w-7xl mx-auto">
                        <h2 class="text-2xl font-bold text-gray-800 mb-8">Dashboard</h2>

                        <!-- Stats Grid -->
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
                            <!-- Stat Card 1 -->
                            <div
                                class="bg-white p-6 rounded-2xl shadow-[0_2px_10px_-4px_rgba(0,0,0,0.1)] border border-gray-100 hover:shadow-md transition-shadow">
                                <div class="text-sm font-medium text-gray-500 mb-4">Total Sales</div>
                                <div class="text-3xl font-bold text-gray-800 mb-2">$12,500</div>
                                <div
                                    class="flex items-center text-sm text-green-600 font-medium bg-green-50 w-fit px-2 py-1 rounded-full">
                                    <span class="material-icons-outlined text-sm mr-1">trending_up</span>
                                    +15%
                                </div>
                            </div>
                            <!-- Stat Card 2 -->
                            <div
                                class="bg-white p-6 rounded-2xl shadow-[0_2px_10px_-4px_rgba(0,0,0,0.1)] border border-gray-100 hover:shadow-md transition-shadow">
                                <div class="text-sm font-medium text-gray-500 mb-4">Orders</div>
                                <div class="text-3xl font-bold text-gray-800 mb-2">350</div>
                                <div
                                    class="flex items-center text-sm text-green-600 font-medium bg-green-50 w-fit px-2 py-1 rounded-full">
                                    <span class="material-icons-outlined text-sm mr-1">trending_up</span>
                                    +10%
                                </div>
                            </div>
                            <!-- Stat Card 3 -->
                            <div
                                class="bg-white p-6 rounded-2xl shadow-[0_2px_10px_-4px_rgba(0,0,0,0.1)] border border-gray-100 hover:shadow-md transition-shadow">
                                <div class="text-sm font-medium text-gray-500 mb-4">New Customers</div>
                                <div class="text-3xl font-bold text-gray-800 mb-2">75</div>
                                <div
                                    class="flex items-center text-sm text-green-600 font-medium bg-green-50 w-fit px-2 py-1 rounded-full">
                                    <span class="material-icons-outlined text-sm mr-1">trending_up</span>
                                    +20%
                                </div>
                            </div>
                        </div>

                        <!-- Quick Actions -->
                        <div class="flex items-center justify-between mb-6">
                            <h3 class="text-xl font-bold text-gray-800">Quick Management</h3>
                        </div>

                        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
                            <!-- Manage Products -->
                            <a href="/admin/products"
                                class="bg-white p-6 rounded-2xl border border-gray-100 shadow-[0_2px_10px_-4px_rgba(0,0,0,0.1)] hover:shadow-md hover:border-indigo-100 transition-all group">
                                <div
                                    class="w-12 h-12 bg-indigo-50 rounded-xl flex items-center justify-center text-indigo-600 mb-4 group-hover:scale-110 transition-transform">
                                    <span class="material-icons-outlined text-2xl">inventory_2</span>
                                </div>
                                <h4 class="text-lg font-bold text-gray-800 mb-1">Products</h4>
                                <p class="text-sm text-gray-500">Add or edit products</p>
                                <div class="mt-4 flex items-center text-xs font-semibold text-indigo-600">
                                    Manage <span class="material-icons-outlined text-sm ml-1">arrow_forward</span>
                                </div>
                            </a>

                            <!-- View Orders -->
                            <a href="/admin/orders"
                                class="bg-white p-6 rounded-2xl border border-gray-100 shadow-[0_2px_10px_-4px_rgba(0,0,0,0.1)] hover:shadow-md hover:border-orange-100 transition-all group">
                                <div
                                    class="w-12 h-12 bg-orange-50 rounded-xl flex items-center justify-center text-orange-600 mb-4 group-hover:scale-110 transition-transform">
                                    <span class="material-icons-outlined text-2xl">local_shipping</span>
                                </div>
                                <h4 class="text-lg font-bold text-gray-800 mb-1">Orders</h4>
                                <p class="text-sm text-gray-500">Track customer orders</p>
                                <div class="mt-4 flex items-center text-xs font-semibold text-orange-600">
                                    Manage <span class="material-icons-outlined text-sm ml-1">arrow_forward</span>
                                </div>
                            </a>

                            <!-- Customer Management -->
                            <a href="/admin/users"
                                class="bg-white p-6 rounded-2xl border border-gray-100 shadow-[0_2px_10px_-4px_rgba(0,0,0,0.1)] hover:shadow-md hover:border-purple-100 transition-all group">
                                <div
                                    class="w-12 h-12 bg-purple-50 rounded-xl flex items-center justify-center text-purple-600 mb-4 group-hover:scale-110 transition-transform">
                                    <span class="material-icons-outlined text-2xl">people</span>
                                </div>
                                <h4 class="text-lg font-bold text-gray-800 mb-1">Customers</h4>
                                <p class="text-sm text-gray-500">User account control</p>
                                <div class="mt-4 flex items-center text-xs font-semibold text-purple-600">
                                    Manage <span class="material-icons-outlined text-sm ml-1">arrow_forward</span>
                                </div>
                            </a>

                            <!-- Category Management -->
                            <a href="/admin/categories"
                                class="bg-white p-6 rounded-2xl border border-gray-100 shadow-[0_2px_10px_-4px_rgba(0,0,0,0.1)] hover:shadow-md hover:border-teal-100 transition-all group">
                                <div
                                    class="w-12 h-12 bg-teal-50 rounded-xl flex items-center justify-center text-teal-600 mb-4 group-hover:scale-110 transition-transform">
                                    <span class="material-icons-outlined text-2xl">category</span>
                                </div>
                                <h4 class="text-lg font-bold text-gray-800 mb-1">Categories</h4>
                                <p class="text-sm text-gray-500">Organize your catalog</p>
                                <div class="mt-4 flex items-center text-xs font-semibold text-teal-600">
                                    Manage <span class="material-icons-outlined text-sm ml-1">arrow_forward</span>
                                </div>
                            </a>
                        </div>

                    </div>
        </div>
        </main>
        </div>


</body>

</html>