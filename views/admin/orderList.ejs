<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order List - Admin Panel</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="/js/admin/common.js"></script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f3f4f6;
        }

        /* Custom Scrollbar */
        ::-webkit-scrollbar {
            width: 6px;
            height: 6px;
        }

        ::-webkit-scrollbar-track {
            background: transparent;
        }

        ::-webkit-scrollbar-thumb {
            background: #cbd5e1;
            border-radius: 3px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: #94a3b8;
        }
    </style>
</head>

<body class="text-gray-800">

    <!-- Top Header -->
    <header class="bg-white shadow-sm fixed w-full z-50 h-16 flex items-center justify-between px-6">
        <div class="flex items-center gap-4">
            <button id="mobileMenuBtn" class="md:hidden text-gray-500 hover:text-gray-700">
                <span class="material-icons-outlined">menu</span>
            </button>
            <h1 class="text-xl font-bold text-gray-800 flex items-center gap-2">
                <span class="w-3 h-3 bg-gray-800 rounded-sm"></span>
                Admin Panel
            </h1>
        </div>
        <div class="flex items-center gap-8">
            <nav class="hidden md:flex items-center gap-6 text-sm font-medium text-gray-600">
                <a href="/admin/dashboard" class="hover:text-indigo-600 transition-colors">Dashboard</a>
                <a href="/admin/products" class="hover:text-indigo-600 transition-colors">Products</a>
                <a href="/admin/orders" class="text-indigo-600 transition-colors">Orders</a>
                <a href="/admin/users" class="hover:text-indigo-600 transition-colors">Customers</a>
            </nav>
            <div class="flex items-center gap-3 pl-6 border-l border-gray-200">
                <div class="w-8 h-8 rounded-full bg-gray-200 overflow-hidden">
                    <img src="https://ui-avatars.com/api/?name=Admin&background=random" alt="Admin"
                        class="w-full h-full object-cover">
                </div>
            </div>
        </div>
    </header>

    <div class="flex pt-16 min-h-screen">
        <!-- Sidebar -->
        <%- include('../partials/adminSidebar') %>

            <!-- Overlay -->
            <div id="sidebarOverlay" class="fixed inset-0 bg-black/20 z-30 hidden md:hidden backdrop-blur-sm"></div>

            <!-- Main Content -->
            <main class="flex-1 p-8 overflow-y-auto">
                <div class="max-w-7xl mx-auto">
                    <!-- Header Actions -->
                    <div
                        class="bg-gray-200 rounded-t-xl px-8 py-4 flex flex-col md:flex-row justify-between items-center gap-4">
                        <h2 class="text-xl font-bold text-orange-500">Orders</h2>

                        <form action="/admin/orders" method="GET" class="relative w-full md:w-96">
                            <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-500">
                                <span class="material-icons-outlined text-[20px]">search</span>
                            </span>
                            <input type="text" name="search" value="<%= search %>" placeholder="Search for products"
                                class="w-full py-2 pl-10 pr-4 bg-gray-100/50 border-none text-gray-600 rounded-lg focus:outline-none focus:ring-0 placeholder-gray-500 text-sm">
                        </form>
                    </div>

                    <!-- Table Card -->
                    <div class="bg-white rounded-b-xl shadow-sm p-8 min-h-[600px]">
                        <div class="overflow-x-auto">
                            <table class="w-full whitespace-nowrap">
                                <thead>
                                    <tr class="bg-gray-600 text-white rounded-lg">
                                        <th class="px-6 py-4 text-sm font-bold text-left rounded-l-lg">Sl</th>
                                        <th class="px-6 py-4 text-sm font-bold text-left">Name</th>
                                        <th class="px-6 py-4 text-sm font-bold text-left">Payment Method</th>
                                        <th class="px-6 py-4 text-sm font-bold text-left">Status</th>
                                        <th class="px-6 py-4 text-sm font-bold text-left">Price</th>
                                        <th class="px-6 py-4 text-sm font-bold text-left rounded-r-lg">Action</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-gray-100">
                                    <% if (orders && orders.length> 0) { %>
                                        <% orders.forEach((order, index)=> { %>
                                            <tr class="hover:bg-gray-50 transition-colors duration-150">
                                                <td class="px-6 py-6 text-sm font-bold text-gray-900">
                                                    <%= (currentPage - 1) * limit + index + 1 %>
                                                </td>
                                                <td class="px-6 py-6 text-sm font-bold text-gray-900">
                                                    <%= order.items[0]?.name || 'Unknown Product' %>
                                                        <% if(order.items.length> 1) { %>
                                                            <span class="text-xs text-gray-500 font-normal ml-1">(+<%=
                                                                    order.items.length - 1 %> more)</span>
                                                            <% } %>
                                                </td>
                                                <td class="px-6 py-6 text-sm font-bold text-gray-900">
                                                    <%= order.paymentMethod %>
                                                </td>
                                                <td class="px-6 py-6 text-sm font-bold">
                                                    <% let statusColor='text-yellow-500' ; if
                                                        (order.orderStatus==='Delivered' ) statusColor='text-green-500'
                                                        ; else if (order.orderStatus==='Cancelled' ||
                                                        order.orderStatus==='Failed' || order.orderStatus==='Returned' )
                                                        statusColor='text-red-500' ; %>
                                                        <span class="<%= statusColor %>">
                                                            <%= order.orderStatus %>
                                                        </span>
                                                </td>
                                                <td class="px-6 py-6 text-sm font-bold text-red-600">
                                                    â‚¹<%= order.totalAmount.toLocaleString('en-IN') %>
                                                </td>
                                                <td class="px-6 py-6 text-sm">
                                                    <a href="/admin/orders/<%= order._id %>"
                                                        class="inline-flex items-center justify-center px-6 py-1.5 bg-green-700 hover:bg-green-800 text-white text-sm font-medium rounded transition-colors duration-200">
                                                        View
                                                    </a>
                                                </td>
                                            </tr>
                                            <% }) %>
                                                <% } else { %>
                                                    <tr>
                                                        <td colspan="6" class="px-6 py-10 text-center text-gray-500">
                                                            No orders found.
                                                        </td>
                                                    </tr>
                                                    <% } %>
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        </a>
                    </div>
                </div>
                <% } %>
    </div>
    </div>
    </main>
    </div>

</body>

</html>