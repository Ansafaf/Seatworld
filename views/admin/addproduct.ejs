<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Product - Admin Dashboard</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f5f5;
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar Styles */
        .sidebar {
            width: 200px;
            background: linear-gradient(180deg, #4a6fa5 0%, #3d5a85 100%);
            color: white;
            padding: 20px 0;
            position: fixed;
            height: 100vh;
            left: 0;
            top: 0;
        }

        .sidebar-item {
            padding: 15px 20px;
            cursor: pointer;
            transition: background 0.3s;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .sidebar-item:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        .sidebar-item.active {
            background-color: rgba(255, 255, 255, 0.2);
            border-left: 4px solid #ff8c00;
        }

        .sidebar-item.logout {
            color: #ff6b6b;
            margin-top: auto;
            position: absolute;
            bottom: 20px;
            width: 100%;
        }

        .icon {
            width: 20px;
            height: 20px;
        }

        /* Main Content Styles */
        .main-content {
            margin-left: 200px;
            padding: 40px;
            flex: 1;
        }

        .form-container {
            background-color: #8b8b8b;
            border-radius: 8px;
            padding: 40px;
            max-width: 900px;
        }

        .form-group {
            margin-bottom: 25px;
        }

        .form-group label {
            display: block;
            color: #ff8c00;
            font-weight: 600;
            margin-bottom: 8px;
            font-size: 14px;
        }

        .form-group input[type="text"],
        .form-group input[type="number"],
        .form-group textarea,
        .form-group select {
            width: 100%;
            padding: 12px;
            background-color: #1a1a1a;
            border: none;
            border-radius: 4px;
            color: white;
            font-size: 14px;
        }

        .form-group textarea {
            min-height: 120px;
            resize: vertical;
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
        }

        /* Image Upload Section */
        .image-upload-section {
            margin-top: 30px;
        }

        .image-upload-label {
            color: #ff8c00;
            font-weight: 600;
            margin-bottom: 15px;
            display: block;
        }

        .image-upload-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 15px;
            margin-bottom: 30px;
        }

        .image-upload-box {
            aspect-ratio: 1;
            background-color: #6b6b6b;
            border: 2px dashed #999;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s;
            position: relative;
            overflow: hidden;
        }

        .image-upload-box:hover {
            border-color: #ff8c00;
            background-color: #7b7b7b;
        }

        .image-upload-box svg {
            width: 40px;
            height: 40px;
            fill: #999;
        }

        .image-upload-box input[type="file"] {
            display: none;
        }

        .image-preview {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .remove-image {
            position: absolute;
            top: 5px;
            right: 5px;
            background-color: rgba(255, 0, 0, 0.8);
            color: white;
            border: none;
            border-radius: 50%;
            width: 24px;
            height: 24px;
            cursor: pointer;
            display: none;
            align-items: center;
            justify-content: center;
            font-size: 16px;
            line-height: 1;
        }

        .image-upload-box:hover .remove-image {
            display: flex;
        }

        /* Submit Button */
        .submit-btn {
            background-color: #ff8c00;
            color: white;
            padding: 14px 40px;
            border: none;
            border-radius: 25px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.3s;
            display: block;
            margin: 0 auto;
        }

        .submit-btn:hover {
            background-color: #e67e00;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .sidebar {
                width: 60px;
            }

            .sidebar-item span {
                display: none;
            }

            .main-content {
                margin-left: 60px;
                padding: 20px;
            }

            .form-row {
                grid-template-columns: 1fr;
            }

            .image-upload-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-item">
            <svg class="icon" viewBox="0 0 24 24" fill="currentColor">
                <path d="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z"/>
            </svg>
            <span>Dashboard</span>
        </div>
        <div class="sidebar-item active">
            <svg class="icon" viewBox="0 0 24 24" fill="currentColor">
                <path d="M20 4H4c-1.11 0-1.99.89-1.99 2L2 18c0 1.11.89 2 2 2h16c1.11 0 2-.89 2-2V6c0-1.11-.89-2-2-2zm0 14H4v-6h16v6zm0-10H4V6h16v2z"/>
            </svg>
            <span>Products</span>
        </div>
        <div class="sidebar-item">
            <svg class="icon" viewBox="0 0 24 24" fill="currentColor">
                <path d="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z"/>
            </svg>
            <span>Customers</span>
        </div>
        <div class="sidebar-item">
            <svg class="icon" viewBox="0 0 24 24" fill="currentColor">
                <path d="M7 18c-1.1 0-1.99.9-1.99 2S5.9 22 7 22s2-.9 2-2-.9-2-2-2zM1 2v2h2l3.6 7.59-1.35 2.45c-.16.28-.25.61-.25.96 0 1.1.9 2 2 2h12v-2H7.42c-.14 0-.25-.11-.25-.25l.03-.12.9-1.63h7.45c.75 0 1.41-.41 1.75-1.03l3.58-6.49c.08-.14.12-.31.12-.48 0-.55-.45-1-1-1H5.21l-.94-2H1zm16 16c-1.1 0-1.99.9-1.99 2s.89 2 1.99 2 2-.9 2-2-.9-2-2-2z"/>
            </svg>
            <span>Orders</span>
        </div>
        <div class="sidebar-item">
            <svg class="icon" viewBox="0 0 24 24" fill="currentColor">
                <path d="M21 3H3c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h18c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H3V5h18v14zM11 12H9v3H7v-3H5v-2h2V7h2v3h2v2z"/>
            </svg>
            <span>Coupons</span>
        </div>
        <div class="sidebar-item">
            <svg class="icon" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2l-5.5 9h11z M12 22l5.5-9h-11z"/>
            </svg>
            <span>Category</span>
        </div>
        <div class="sidebar-item">
            <svg class="icon" viewBox="0 0 24 24" fill="currentColor">
                <path d="M21 3H3c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h18c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H3V5h18v14z"/>
            </svg>
            <span>Discounts</span>
        </div>
        <div class="sidebar-item">
            <svg class="icon" viewBox="0 0 24 24" fill="currentColor">
                <path d="M4 6H2v14c0 1.1.9 2 2 2h14v-2H4V6zm16-4H8c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm-1 9H9V9h10v2zm-4 4H9v-2h6v2zm4-8H9V5h10v2z"/>
            </svg>
            <span>Banner</span>
        </div>
        <div class="sidebar-item">
            <svg class="icon" viewBox="0 0 24 24" fill="currentColor">
                <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zM9 17H7v-7h2v7zm4 0h-2V7h2v10zm4 0h-2v-4h2v4z"/>
            </svg>
            <span>Sales Report</span>
        </div>
        <div class="sidebar-item logout">
            <svg class="icon" viewBox="0 0 24 24" fill="currentColor">
                <path d="M17 7l-1.41 1.41L18.17 11H8v2h10.17l-2.58 2.58L17 17l5-5zM4 5h8V3H4c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h8v-2H4V5z"/>
            </svg>
            <span>Logout</span>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="form-container">
            <form action="/admin/products/add" method="POST" enctype="multipart/form-data" id="productForm">
                
                <!-- Product Name -->
                <div class="form-group">
                    <label for="productName">Product Name</label>
                    <input type="text" id="productName" name="productName" required>
                </div>

                <!-- Price and Category Row -->
                <div class="form-row">
                    <div class="form-group">
                        <label for="price">Price</label>
                        <input type="number" id="price" name="price" step="0.01" required>
                    </div>
                    <div class="form-group">
                        <label for="category">Category</label>
                        <select id="category" name="category" required>
                            <option value="">Select Category</option>
                            <% if (categories && categories.length > 0) { %>
                                <% categories.forEach(category => { %>
                                    <option value="<%= category._id %>"><%= category.name %></option>
                                <% }) %>
                            <% } %>
                        </select>
                    </div>
                </div>

                <!-- Brand Name and Stock Row -->
                <div class="form-row">
                    <div class="form-group">
                        <label for="brandName">Brand Name</label>
                        <input type="text" id="brandName" name="brandName" required>
                    </div>
                    <div class="form-group">
                        <label for="stock">Stock</label>
                        <input type="number" id="stock" name="stock" min="0" required>
                    </div>
                </div>

                <!-- Color -->
                <div class="form-group">
                    <label for="color">Color</label>
                    <input type="text" id="color" name="color">
                </div>

                <!-- Description -->
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea id="description" name="description" required></textarea>
                </div>

                <!-- Product Images -->
                <div class="image-upload-section">
                    <label class="image-upload-label">Product Image</label>
                    <div class="image-upload-grid">
                        <div class="image-upload-box" onclick="document.getElementById('image1').click()">
                            <svg viewBox="0 0 24 24">
                                <path d="M21 19V5c0-1.1-.9-2-2-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2zM8.5 13.5l2.5 3.01L14.5 12l4.5 6H5l3.5-4.5z"/>
                            </svg>
                            <input type="file" id="image1" name="images" accept="image/*" onchange="previewImage(this, 0)">
                            <button type="button" class="remove-image" onclick="removeImage(0)">×</button>
                        </div>
                        <div class="image-upload-box" onclick="document.getElementById('image2').click()">
                            <svg viewBox="0 0 24 24">
                                <path d="M21 19V5c0-1.1-.9-2-2-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2zM8.5 13.5l2.5 3.01L14.5 12l4.5 6H5l3.5-4.5z"/>
                            </svg>
                            <input type="file" id="image2" name="images" accept="image/*" onchange="previewImage(this, 1)">
                            <button type="button" class="remove-image" onclick="removeImage(1)">×</button>
                        </div>
                        <div class="image-upload-box" onclick="document.getElementById('image3').click()">
                            <svg viewBox="0 0 24 24">
                                <path d="M21 19V5c0-1.1-.9-2-2-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2zM8.5 13.5l2.5 3.01L14.5 12l4.5 6H5l3.5-4.5z"/>
                            </svg>
                            <input type="file" id="image3" name="images" accept="image/*" onchange="previewImage(this, 2)">
                            <button type="button" class="remove-image" onclick="removeImage(2)">×</button>
                        </div>
                        <div class="image-upload-box" onclick="document.getElementById('image4').click()">
                            <svg viewBox="0 0 24 24">
                                <path d="M21 19V5c0-1.1-.9-2-2-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2zM8.5 13.5l2.5 3.01L14.5 12l4.5 6H5l3.5-4.5z"/>
                            </svg>
                            <input type="file" id="image4" name="images" accept="image/*" onchange="previewImage(this, 3)">
                            <button type="button" class="remove-image" onclick="removeImage(3)">×</button>
                        </div>
                    </div>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="submit-btn">Add Product</button>
            </form>
        </div>
    </div>

    <script>
        function previewImage(input, index) {
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                const box = input.parentElement;
                
                reader.onload = function(e) {
                    // Remove SVG icon
                    const svg = box.querySelector('svg');
                    if (svg) svg.style.display = 'none';
                    
                    // Add or update image preview
                    let img = box.querySelector('.image-preview');
                    if (!img) {
                        img = document.createElement('img');
                        img.className = 'image-preview';
                        box.appendChild(img);
                    }
                    img.src = e.target.result;
                }
                
                reader.readAsDataURL(input.files[0]);
            }
        }

        function removeImage(index) {
            event.stopPropagation();
            const input = document.getElementById(`image${index + 1}`);
            const box = input.parentElement;
            
            // Clear the file input
            input.value = '';
            
            // Remove preview image
            const img = box.querySelector('.image-preview');
            if (img) img.remove();
            
            // Show SVG icon again
            const svg = box.querySelector('svg');
            if (svg) svg.style.display = 'block';
        }

        // Form validation
        document.getElementById('productForm').addEventListener('submit', function(e) {
            const price = document.getElementById('price').value;
            const stock = document.getElementById('stock').value;
            
            if (price < 0) {
                e.preventDefault();
                alert('Price cannot be negative');
                return;
            }
            
            if (stock < 0) {
                e.preventDefault();
                alert('Stock cannot be negative');
                return;
            }
        });
    </script>
</body>
</html>