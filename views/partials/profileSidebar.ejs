<!-- Mobile Sidebar -->
<aside class="sidebar mobile-sidebar" id="mobileSidebar">
    <div class="mobile-sidebar-header">
        <div class="brand">
            <img src="https://res.cloudinary.com/dbdnmlzy6/image/upload/v1765945540/products/rmsn314w038gnfzmemmi.jpg"
                alt="SeatWorld Logo">
            SeatWorld
        </div>
        <button class="close-sidebar-btn" id="closeSidebarBtn">
            <span class="material-icons-outlined">close</span>
        </button>
    </div>

    <div class="profile-header">
        <form action="/profile/avatar" method="POST" enctype="multipart/form-data">
            <div class="avatar-wrapper">
                <div class="avatar">
                    <% if (user.avatar) { %>
                        <img src="<%= user.avatar %>" alt="User Avatar">
                        <% } %>
                </div>
                <label class="avatar-edit-btn" for="avatarInputMobile">✎</label>
                <input type="file" id="avatarInputMobile" name="avatar" accept="image/*" onchange="this.form.submit()">
            </div>
        </form>

        <div class="user-name">
            <%= user.name || user.username %>
        </div>
        <div class="user-email">
            <%= user.email %>
        </div>
    </div>

    <div class="menu-section">
        <a href="/profile" class="menu-item <%= active === 'profile' ? 'active' : '' %>">
            <span class="menu-icon material-icons-outlined">person</span>
            Personal Information
        </a>
        <a href="/address" class="menu-item <%= active === 'address' ? 'active' : '' %>">
            <span class="menu-icon material-icons-outlined">location_on</span>
            Address
        </a>
        <a href="/orders" class="menu-item <%= active === 'orders' ? 'active' : '' %>">
            <span class="menu-icon material-icons-outlined">shopping_bag</span>
            Orders
        </a>
        <a href="/wallet" class="menu-item <%= active === 'wallet' ? 'active' : '' %>">
            <span class="menu-icon material-icons-outlined">account_balance_wallet</span>
            Wallet
        </a>
        <a href="/coupons" class="menu-item <%= active === 'coupons' ? 'active' : '' %>">
            <span class="menu-icon material-icons-outlined">local_offer</span>
            Coupon
        </a>
        <a href="/password-change" class="menu-item <%= active === 'password' ? 'active' : '' %>">
            <span class="menu-icon material-icons-outlined">lock</span>
            Password Change
        </a>
        <a href="/referral" class="menu-item <%= active === 'referral' ? 'active' : '' %>">
            <span class="menu-icon material-icons-outlined">share</span>
            Generate Referral
        </a>
        <a href="/logout" class="menu-item">
            <span class="menu-icon material-icons-outlined">logout</span>
            Logout
        </a>
    </div>
</aside>

