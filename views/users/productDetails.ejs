<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= product.name %> - SeatWorld
    </title>
    <link rel="stylesheet" href="/css/users/productDetails.css">
</head>

<body>
    <%- include('../partials/header', { showSearch: false }) %>
        <%- include("../partials/breadcrumb", { breadcrumbs }) %>

            <main class="container">
                <section class="product-detail-section">
                    <!-- Gallery -->
                    <div class="gallery-container">
                        <div class="main-image-wrapper" id="img-container">
                            <img src="<%= product.image %>" alt="<%= product.name %>" class="main-image"
                                id="main-image">
                            <div id="zoom-result" class="zoom-result"></div>
                        </div>
                        <div class="thumbnails-col">
                            <!-- Main image as first thumbnail -->
                            <div class="thumbnail active" onclick="changeImage('<%= product.image %>', this)">
                                <img src="<%= product.image %>" alt="View 1">
                            </div>
                            <!-- Additional variants/images -->
                            <% if (product.variants && product.variants.length) { %>
                                <% product.variants.forEach((variant, idx)=> { %>
                                    <% if (variant.images && variant.images.length) { %>
                                        <div class="thumbnail" onclick="changeImage('<%= variant.images[0] %>', this)">
                                            <img src="<%= variant.images[0] %>" alt="View <%= idx + 2 %>">
                                        </div>
                                        <% } %>
                                            <% }) %>
                                                <% } %>
                        </div>
                    </div>

                    <!-- Info -->
                    <div class="product-info">
                        <button class="wishlist-btn-abs <%= isInWishlist ? 'active' : '' %>" id="wishlist-btn"
                            onclick="toggleWishlist('<%= product.variant ? product.variant._id : '' %>', this)">
                            <svg class="wishlist-icon" viewBox="0 0 24 24"
                                fill="<%= isInWishlist ? 'currentColor' : 'none' %>" stroke="currentColor"
                                stroke-width="2">
                                <path
                                    d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z">
                                </path>
                            </svg>
                        </button>

                        <% if (product.stock> 0) { %>
                            <div class="stock-badge in-stock">In Stock</div>
                            <% } else { %>
                                <div class="stock-badge out-of-stock">Out of Stock</div>
                                <% } %>

                                    <h1 class="product-title">
                                        <%= product.name %>
                                    </h1>

                                    <div class="rating-summary">
                                        <div class="stars">
                                            <span>★</span><span>★</span><span>★</span><span>★</span><span>★</span>
                                        </div>
                                        <span>4.8 (124 reviews)</span>
                                    </div>

                                    <p class="product-desc">
                                        <%= product.description
                                            || "Ergonomic gaming chair with durable synthetic leather and high-density foam cushions, built for long hours of comfort and support."
                                            %>
                                    </p>

                                    <% const currentPrice=product.variant ? product.variant.price : product.Baseprice;
                                        const originalPrice=product.Baseprice; const isOnSale=currentPrice <
                                        originalPrice; const offPercent=isOnSale ? Math.round((1 - currentPrice /
                                        originalPrice) * 100) : 0; %>
                                        <div class="price-group">
                                            <div class="price-tag">₹<%= Number(currentPrice).toLocaleString('en-IN') %>
                                            </div>
                                            <% if (isOnSale) { %>
                                                <div class="old-price">₹<%=
                                                        Number(originalPrice).toLocaleString('en-IN') %>
                                                </div>
                                                <div class="discount-badge">
                                                    <%= offPercent %>% OFF
                                                </div>
                                                <% } %>
                                        </div>
                                        <div class="tax-note">MRP incl. of all taxes</div>

                                        <div class="color-section">
                                            <span class="color-label">FIND YOUR COLOR</span>
                                            <div class="color-options">
                                                <% if (product.variants && product.variants.length) { %>
                                                    <% product.variants.forEach(v=> { %>
                                                        <div class="color-opt <%= (product.variant && product.variant._id === v._id) ? 'active' : '' %>"
                                                            onclick="location.href='?variant=<%= v._id %>'">
                                                            <%= v.color %>
                                                        </div>
                                                        <% }) %>
                                                            <% } else { %>
                                                                <div class="color-opt active">Std</div>
                                                                <% } %>
                                            </div>
                                        </div>

                                        <div class="action-buttons">
                                            <button id="cart-button"
                                                class="btn-action btn-cart <%= product.stock <= 0 ? 'btn-disabled' : '' %>"
                                                data-variant-id="<%= product.variant ? product.variant._id : '' %>"
                                                <%=product.stock <=0 ? 'disabled' : '' %>>Add to Cart</button>
                                            <button id="buy-button"
                                                class="btn-action btn-buy <%= product.stock <= 0 ? 'btn-disabled' : '' %>"
                                                <%=product.stock <=0 ? 'disabled' : '' %>>Buy Now</button>
                                        </div>
                    </div>
                </section>

                <!-- Dummy Reviews Section -->
                <section class="reviews-section">
                    <div class="reviews-header">
                        <h2 class="reviews-title">Customer Reviews</h2>
                    </div>
                    <div class="reviews-grid">
                        <div class="review-card">
                            <div class="review-user">
                                <div class="user-avatar">JD</div>
                                <div class="user-info">
                                    <span class="name">John Doe</span>
                                    <span class="date">Dec 15, 2023</span>
                                </div>
                                <div class="stars" style="margin-left: auto;">
                                    ★ ★ ★ ★ ★
                                </div>
                            </div>
                            <div class="review-content">
                                "Absolutely love this chair! Extremely comfortable for long gaming sessions and the
                                lumbar support is exactly what I needed. Build quality is top-notch."
                            </div>
                        </div>
                        <div class="review-card">
                            <div class="review-user">
                                <div class="user-avatar">AS</div>
                                <div class="user-info">
                                    <span class="name">Alice Smith</span>
                                    <span class="date">Nov 28, 2023</span>
                                </div>
                                <div class="stars" style="margin-left: auto;">
                                    ★ ★ ★ ★ ★
                                </div>
                            </div>
                            <div class="review-content">
                                "Great aesthetics and very sturdy. Set up was straightforward. The material feels
                                premium and it fits perfectly in my home office space."
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Related Products -->
                <section class="related-section">
                    <h2 class="related-title">YOU MIGHT ALSO LIKE</h2>
                    <div class="related-grid">
                        <% if (locals.relatedProducts) { %>
                            <% relatedProducts.forEach(rp=> { %>
                                <a href="/product/<%= rp._id %>" class="related-card">
                                    <div class="related-img-box">
                                        <img src="<%= rp.image %>" alt="<%= rp.name %>">
                                    </div>
                                    <div class="related-name">
                                        <%= rp.name %>
                                    </div>
                                    <div class="related-price">₹<%= rp.price %>
                                    </div>
                                </a>
                                <% }) %>
                                    <% } %>
                    </div>
                </section>
            </main>

            <%- include('../partials/footer') %>

                <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
                <script src="/js/users/wishlist.js"></script>
                <script src="/js/users/productDetails.js"></script>
</body>

</html>