<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= product.name %> - SeatWorld
    </title>
    <link rel="stylesheet" href="/css/users/authHeader.css">
    <link rel="stylesheet" href="/css/users/productDetails.css">
</head>

<body>
    <% if(user){ %>
        <%- include('../partials/header', { showSearch: false }) %>
            <% } else { %>
                <header class="auth-header">
                    <a href="/" class="brand">
                        <img src="https://res.cloudinary.com/dbdnmlzy6/image/upload/v1765945540/products/rmsn314w038gnfzmemmi.jpg"
                            alt="Logo">
                        SeatWorld
                    </a>
                    <div class="menu-toggle" onclick="toggleMenu()">
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>
                    <nav id="mainNav">
                        <a href="/">Home</a>
                        <a href="/login">Login</a>
                        <a href="/signup">Register</a>
                        <a href="/">Contact</a>
                    </nav>
                </header>
                <% } %>
                    <%- include("../partials/breadcrumb", { breadcrumbs }) %>

                        <main class="container">
                            <section class="product-detail-section">
                                <!-- Gallery -->
                                <div class="gallery-container">
                                    <div class="main-image-wrapper" id="img-container">
                                        <img src="<%= product.image %>" alt="<%= product.name %>" class="main-image"
                                            id="main-image">
                                        <div id="zoom-result" class="zoom-result"></div>
                                    </div>
                                    <div class="thumbnails-col">
                                        <% if (product.variant && product.variant.images &&
                                            product.variant.images.length) { %>
                                            <% product.variant.images.forEach((img, idx)=> { %>
                                                <div class="thumbnail <%= idx === 0 ? 'active' : '' %>"
                                                    onclick="changeImage('<%= img %>', this)">
                                                    <img src="<%= img %>" alt="View <%= idx + 1 %>">
                                                </div>
                                                <% }) %>
                                                    <% } else { %>
                                                        <div class="thumbnail active"
                                                            onclick="changeImage('<%= product.image %>', this)">
                                                            <img src="<%= product.image %>" alt="View 1">
                                                        </div>
                                                        <% } %>
                                    </div>
                                </div>

                                <!-- Info -->
                                <div class="product-info">
                                    <button class="wishlist-btn-abs <%= isInWishlist ? 'active' : '' %>"
                                        id="wishlist-btn"
                                        onclick="toggleWishlist('<%= product.variant ? product.variant._id : '' %>', this)">
                                        <svg class="wishlist-icon" viewBox="0 0 24 24"
                                            fill="<%= isInWishlist ? 'currentColor' : 'none' %>" stroke="currentColor"
                                            stroke-width="2">
                                            <path
                                                d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z">
                                            </path>
                                        </svg>
                                    </button>

                                    <% if (product.stock> 0) { %>
                                        <div class="stock-badge in-stock">In Stock</div>
                                        <% } else { %>
                                            <div class="stock-badge out-of-stock">Out of Stock</div>
                                            <% } %>

                                                <h1 class="product-title">
                                                    <%= product.name %>
                                                </h1>

                                                <p class="product-desc">
                                                    <%= product.description
                                                        || "Ergonomic gaming chair with durable synthetic leather and high-density foam cushions, built for long hours of comfort and support."
                                                        %>
                                                </p>

                                                <div class="price-group">
                                                    <div class="price-tag">₹<%=
                                                            Number(product.price).toLocaleString('en-IN') %>
                                                    </div>
                                                    <% if (product.hasOffer) { %>
                                                        <div class="old-price">₹<%=
                                                            Number(product.originalPrice).toLocaleString('en-IN') %>
                                                        </div>
                                                        <div class="discount-badge">
                                                            <%= product.discountPercentage %>% OFF
                                                        </div>
                                                        <% } %>
                                                </div>
                                                <div class="tax-note">MRP incl. of all taxes</div>

                                                <div class="color-section">
                                                    <span class="color-label">FIND YOUR COLOR</span>
                                                    <div class="color-options">
                                                        <% if (product.variants && product.variants.length) { %>
                                                            <% product.variants.forEach(v=> { %>
                                                                <div class="color-opt <%= (product.variant && product.variant._id === v._id) ? 'active' : '' %>"
                                                                    onclick="location.href='?variant=<%= v._id %>'">
                                                                    <%= v.color %>
                                                                </div>
                                                                <% }) %>
                                                                    <% } else { %>
                                                                        <div class="color-opt active">Std</div>
                                                                        <% } %>
                                                    </div>
                                                </div>

                                                <div class="action-buttons">
                                                    <button id="cart-button"
                                                        class="btn-action btn-cart <%= product.stock <= 0 ? 'btn-disabled' : '' %>"
                                                        data-variant-id="<%= product.variant ? product.variant._id : '' %>"
                                                        <%=product.stock <=0 ? 'disabled' : '' %>>Add to Cart</button>

                                                </div>
                                </div>
                            </section>


                            <!-- Related Products -->
                            <section class="related-section">
                                <h2 class="related-title">YOU MIGHT ALSO LIKE</h2>
                                <div class="related-grid">
                                    <% if (locals.relatedProducts) { %>
                                        <% relatedProducts.forEach(rp=> { %>
                                            <a href="/product/<%= rp._id %>" class="related-card">
                                                <div class="related-img-box">
                                                    <img src="<%= rp.image %>" alt="<%= rp.name %>">
                                                </div>
                                                <div class="related-name">
                                                    <%= rp.name %>
                                                </div>
                                                <div class="related-price">
                                                    <% if (rp.hasOffer) { %>
                                                        <span class="curr">₹<%= rp.price %></span>
                                                        <span class="old"
                                                            style="text-decoration: line-through; color: #94a3b8; font-size: 0.8rem; margin-left: 5px;">₹
                                                            <%= rp.originalPrice %>
                                                        </span>
                                                        <% } else { %>
                                                            ₹<%= rp.price %>
                                                                <% } %>
                                                </div>
                                            </a>
                                            <% }) %>
                                                <% } %>
                                </div>
                            </section>
                        </main>

                        <%- include('../partials/footer') %>

                            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
                            <script src="/js/users/wishlist.js"></script>
                            <script src="/js/users/productDetails.js"></script>
</body>

</html>