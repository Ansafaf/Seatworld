<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Wallet | SeatWorld</title>
    <link rel="stylesheet" href="/css/users/personalInfo.css"> <!-- Reusing sidebar styles -->
    <link rel="stylesheet" href="/css/users/wallet.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>

<body>
    <%- include('../partials/header', { showSearch: false }) %>
        <%- include("../partials/breadcrumb", { breadcrumbs }) %>
            <%- include("../partials/flash", { messageData: locals.message }) %>

                <button class="menu-btn" onclick="toggleSidebar()"
                    style="position: fixed; top: 90px; left: 20px; z-index: 100; background: white; border-radius: 50%; padding: 10px; box-shadow: 0 2px 5px rgba(0,0,0,0.2); border: none;">
                    <i class="fas fa-bars" style="font-size: 20px;"></i>
                </button>

                <div class="wrapper">
                    <!-- SIDEBAR (Reusing from partials conceptually or manual sync) -->
                    <aside class="sidebar" id="sidebar">
                        <h3>MY ACCOUNT</h3>
                        <ul>
                            <li><a href="/profile">Personal Information</a></li>
                            <li><a href="/address">Address</a></li>
                            <li><a href="/orders">Orders</a></li>
                            <li class="active"><a href="/wallet">Wallet</a></li>
                            <li><a href="/coupons">Coupon</a></li>
                            <li><a href="/password-change">Password Change</a></li>
                            <li><a href="/logout">Logout</a></li>
                        </ul>
                    </aside>

                    <!-- CONTENT -->
                    <section class="content">
                        <h2 class="page-title">Wallet Overview</h2>

                        <div class="wallet-container">
                            <div class="balance-card">
                                <span class="label">Balance</span>
                                <h1 class="amount">₹<%= wallet ? wallet.balance.toFixed(2) : '0.00' %>
                                </h1>
                            </div>

                            <div class="actions">
                                <button class="btn btn-history"
                                    onclick="window.location.href='/wallet/history'">Transaction History</button>
                                <button class="btn btn-add" onclick="openAddMoneyModal()">Add Amount</button>
                            </div>
                        </div>

                        <div id="transactionHistory" class="transaction-section">
                            <div
                                style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 15px;">
                                <h3>Recent Transactions</h3>
                                <% if (wallet && wallet.transactions && wallet.transactions.length> 3) { %>
                                    <a href="/wallet/history"
                                        style="text-decoration: none; color: #007bff; font-weight: 600; font-size: 14px;">View
                                        All</a>
                                    <% } %>
                            </div>

                            <% if (wallet && wallet.recentTransactions && wallet.recentTransactions.length> 0) { %>
                                <div class="table-responsive">
                                    <table class="transaction-table">
                                        <thead>
                                            <tr>
                                                <th>Date</th>
                                                <th>Description</th>
                                                <th>Type</th>
                                                <th>Amount</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% wallet.recentTransactions.forEach(t=> { %>
                                                <tr>
                                                    <td>
                                                        <%= new Date(t.date).toLocaleDateString() %>
                                                    </td>
                                                    <td>
                                                        <%= t.description %>
                                                    </td>
                                                    <td>
                                                        <span class="badge <%= t.type %>">
                                                            <%= t.type.toUpperCase() %>
                                                        </span>
                                                    </td>
                                                    <td class="<%= t.type === 'credit' ? 'text-green' : 'text-red' %>">
                                                        <%= t.type==='credit' ? '+' : '-' %>₹<%= t.amount.toFixed(2) %>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                                <% } else { %>
                                    <p class="no-transactions">No transactions found.</p>
                                    <% } %>
                        </div>
                    </section>
                </div>

                <!-- Add Money Modal -->
                <div id="addMoneyModal" class="modal">
                    <div class="modal-content">
                        <span class="close" onclick="closeAddMoneyModal()">&times;</span>
                        <h3>Add Money to Wallet</h3>
                        <form id="addMoneyForm">
                            <div class="form-group">
                                <label for="amount">Enter Amount (₹)</label>
                                <input type="number" id="amount" name="amount" min="1" max="10000" required
                                    placeholder="e.g. 500">
                            </div>
                            <!-- Payment integration buttons would go here (Razorpay/Stripe) -->
                            <!-- For now, assuming direct add or simulated payment -->
                            <button type="submit" class="btn btn-primary">Proceed to Pay</button>
                        </form>
                    </div>
                </div>

                <div id="sidebarOverlay" class="sidebar-overlay" onclick="toggleSidebar()"></div>

                <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
                <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
                <script src="/js/users/wallet.js"></script>
                <%- include('../partials/footer') %>
</body>

</html>