                            <span>Logout</span>
                        </a>
                    </aside>

                    <!-- Main Content -->
                    <main class="main-content">
                        <h1 class="page-title">Add New Address</h1>

                        <form action="/address/add" method="POST">
                            <div class="form-group">
                                <label class="form-label" for="name">Name</label>
                                <input type="text" id="name" name="name" class="form-input"
                                    placeholder="Enter your full name" required>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="houseName">House Name/No</label>
                                <input type="text" id="houseName" name="houseName" class="form-input"
                                    placeholder="Enter house name or number" required>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="locality">Locality/Street</label>
                                <input type="text" id="locality" name="locality" class="form-input"
                                    placeholder="Enter street or locality" required>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="city">Town/City</label>
                                <input type="text" id="city" name="city" class="form-input"
                                    placeholder="Enter your city" required>
                            </div>

                            <div class="form-row">
                                <div class="form-group">
                                    <label class="form-label" for="state">State</label>
                                    <input type="text" id="state" name="state" class="form-input"
                                       placeholder="Enter state" required>
                                </div>

                                <div class="form-group">
                                    <label class="form-label" for="country">Country</label>
                                    <input type="text" id="country" name="country" class="form-input" value="India"
                                        required readonly>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="pincode">Pincode</label>
                                <input type="text" id="pincode" name="pincode" class="form-input"
                                    placeholder="6-digit pincode" pattern="[0-9]{6}" required>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="mobile">Mobile Number</label>
                                <input type="tel" id="mobile" name="mobile" class="form-input"
                                    placeholder="10-digit mobile number" pattern="[0-9]{10}" required>
                            </div>

                            <div class="form-actions">
                                <button type="submit" class="btn-save">Save Address</button>
                            </div>
                        </form>
                    </main>
                </div>
            </div>

            <%- include('../partials/footer')  %>
            
                <script type="module" src="/js/users/addressAdd.js"></script>
</body>

