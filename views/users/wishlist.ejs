<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Wishlist - SeatWorld</title>
  <link rel="stylesheet" href="/css/style.css"> <!-- external CSS -->
  <link rel="stylesheet" href="/css/users/wishlist.css">
</head>

<body>
  <!-- HEADER -->
  <header>
    <div class="logo">
      <img src="/images/logo.png" alt="SeatWorld" style="height:30px; margin-right:8px;">
      SeatWorld
    </div>
    <nav>
      <a href="/home">Home</a>
      <a href="/products">Products</a>
      <a href="/about">About</a>
    </nav>
    <div class="icons">
      <span>â™¡</span>
      <span>ðŸ‘¤</span>
      <span>ðŸ›’</span>
    </div>
  </header>
  <%- include('../partials/flash') %>

    <!-- WISHLIST -->
    <div class="wishlist">
      <h2>WISHLIST</h2>
      <table>
        <thead>
          <tr>
            <th>Product</th>
            <th>Details</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          <% wishlist.forEach(item=> { %>
            <tr>
              <td>
                <img src="<%= item.image %>" alt="<%= item.name %>">
                <a href="/wishlist/remove/<%= item._id %>" class="remove">Remove</a>
              </td>
              <td>
                <h3>
                  <%= item.name %>
                </h3>
                <form action="/cart/add" method="POST">
                  <input type="hidden" name="productId" value="<%= item._id %>">
                  <button class="add-to-cart">Add To Cart</button>
                </form>
              </td>
              <td>â‚¹<%= item.price %>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>

      <!-- PAGINATION -->
      <div class="pagination">
        <button>Previous</button>
        <button class="active">1</button>
        <button>2</button>
        <button>3</button>
        <button>Next</button>
      </div>
    </div>

    <footer>
      <p>Â© <%= new Date().getFullYear() %> SeatWorld. All Rights Reserved</p>
    </footer>
</body>

</html>