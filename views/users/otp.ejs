<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>OTP Verification - SeatWorld</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', sans-serif;
      background: #fff;
      margin: 0;
      padding: 0;
      text-align: center;
    }
    .header {
      display: flex;
      align-items: center;
      padding: 15px 40px;
    }
    .header img {
      height: 35px;
      margin-right: 10px;
    }
    .header h1 {
      font-size: 20px;
      margin: 0;
      color: #0a3d62;
    }
    .container {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 80vh;
    }
    .card {
      background: #f8f9fa;
      padding: 30px;
      border-radius: 12px;
      box-shadow: 0 0 8px rgba(0,0,0,0.05);
      width: 320px;
      text-align: center;
    }
    .card img {
      width: 50px;
      margin-bottom: 15px;
    }
    .card p {
      font-size: 14px;
      color: #444;
      margin-bottom: 20px;
    }
    .otp-inputs {
      display: flex;
      justify-content: space-between;
      margin-bottom: 15px;
    }
    .otp-inputs input {
      width: 50px;
      height: 50px;
      font-size: 22px;
      text-align: center;
      border: 1px solid #ccc;
      border-radius: 6px;
    }
    .resend {
      font-size: 12px;
      margin: 10px 0;
      color: #666;
    }
    .resend a {
      text-decoration: none;
      color: #0a3d62;
      font-weight: 600;
      margin-left: 4px;
    }
    .timer {
      font-size: 12px;
      color: #444;
      margin-bottom: 15px;
    }
    .buttons {
      display: flex;
      justify-content: space-between;
      margin-top: 15px;
    }
    .buttons button {
      flex: 1;
      margin: 0 5px;
      padding: 12px;
      border: none;
      border-radius: 25px;
      font-size: 14px;
      cursor: pointer;
    }
    .cancel {
      background: #ccc;
      color: #fff;
    }
    .verify {
      background: #999;
      color: #fff;
    }
    .verify:hover {
      background: #666;
    }

    /* Messages */
    .error {
      background-color: #ffe5e5;
      color: #d9534f;
      border: 1px solid #f5c2c2;
      border-radius: 6px;
      padding: 10px;
      font-size: 13px;
      margin-bottom: 15px;
      text-align: center;
    }
    .message {
      background-color: #e8f7e5;
      color: #2e7d32;
      border: 1px solid #c3e6cb;
      border-radius: 6px;
      padding: 10px;
      font-size: 13px;
      margin-bottom: 15px;
      text-align: center;
    }
  </style>
</head>
<body>
  <!-- Header -->
  <div class="header">
    <img src="/images/logo.png" alt="SeatWorld Logo">
    <h1>SeatWorld</h1>
  </div>

  <!-- OTP Card -->
  <div class="container">
    <div class="card">
      <img src="/images/mail-icon.png" alt="Mail Icon">
      <p>Please check your inbox<br>We’ve sent a code to your email</p>

      <!-- ✅ Show messages -->
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="error"><%= error %></div>
      <% } %>
      <% if (typeof message !== 'undefined' && message) { %>
        <div class="message"><%= message %></div>
      <% } %>

      <form action="/verify-otp" method="POST">
        <div class="otp-inputs">
          <input type="text" name="otp1" maxlength="1" required>
          <input type="text" name="otp2" maxlength="1" required>
          <input type="text" name="otp3" maxlength="1" required>
          <input type="text" name="otp4" maxlength="1" required>
        </div>

        <div class="timer" id="timer"></div>

        <div class="buttons">
          <button type="button" class="cancel" onclick="window.location='/login'">Cancel</button>
          <button type="submit" class="verify">Verify</button>
        </div>
      </form>

      <div class="resend">
        Didn't receive code? 
        <a href="/resend-otp">Click to resend</a>
      </div>
    </div>
  </div>

  <script>
    // ✅ OTP expiry timer
    const expiryTime = new Date("<%= otpExpires ? otpExpires.toString() : '' %>").getTime();

    function startTimer(duration, display) {
      let timer = duration, minutes, seconds;
      const interval = setInterval(() => {
        if (timer <= 0) {
          clearInterval(interval);
          display.textContent = "Expired";
          document.querySelector(".verify").disabled = true;
          document.querySelector(".verify").style.background = "#ccc";
          return;
        }

        minutes = Math.floor(timer / 60);
        seconds = timer % 60;
        display.textContent =
          (minutes < 10 ? "0" : "") + minutes + ":" +
          (seconds < 10 ? "0" : "") + seconds;

        timer--;
      }, 1000);
    }

    window.onload = function() {
      if (!isNaN(expiryTime)) {
        const now = Date.now();
        let secondsLeft = Math.floor((expiryTime - now) / 1000);
        if (secondsLeft > 0) {
          startTimer(secondsLeft, document.querySelector("#timer"));
        } else {
          document.querySelector("#timer").textContent = "Expired";
          document.querySelector(".verify").disabled = true;
          document.querySelector(".verify").style.background = "#ccc";
        }
      }
    };

    // ✅ OTP input auto-focus
    const inputs = document.querySelectorAll('.otp-inputs input');
    inputs.forEach((input, index) => {
      input.addEventListener('input', () => {
        if (input.value.length === 1 && index < inputs.length - 1) {
          inputs[index + 1].focus();
        }
      });
      input.addEventListener('keydown', (e) => {
        if (e.key === 'Backspace' && input.value === '' && index > 0) {
          inputs[index - 1].focus();
        }
      });
    });
  </script>
</body>
</html>
