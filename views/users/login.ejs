<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>SeatWorld | Log in</title>

  <link rel="stylesheet" href="/css/users/login.css">
</head>

<body>

  <%- include('../partials/authHeader') %>

    <div class="login-container">
      <div class="login-title">Log in</div>

      <div class="form-box">
        <form class="login-form" method="POST" action="/login">




          <label>Email address</label>
          <input type="email" name="email" required>

          <label>Password</label>
          <input type="password" name="password" required>

          <button type="submit">Log in</button>

          <div class="links">
            <a href="/forgot-password">Forgot password?</a>
          </div>

          <div class="links">
            Donâ€™t have an account? <a href="/signup">Register</a>
          </div>

          <div class="divider">
            <div class="divider-line"></div>
            <span style="padding:0 10px;">OR</span>
            <div class="divider-line"></div>
          </div>

          <a href="/auth/google" class="google-btn">
            <img src="https://www.svgrepo.com/show/355037/google.svg">
            Continue with Google
          </a>

        </form>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      // Show blocked message if passed from controller
      <% if (typeof blockedMessage !== 'undefined' && blockedMessage) { %>
        Swal.fire({
          icon: 'error',
          title: 'Account Blocked',
          text: '<%= blockedMessage.message %>',
          confirmButtonColor: '#3b82f6'
        });
      <% } %>
    </script>
    <script type="module" src="/js/users/login.js"></script>

</body>

</html>