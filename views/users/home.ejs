  <link rel="stylesheet" href="/css/style.css" />
  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background: #fff;
    }

    /* Navbar */
    header {
      background: #cccccc;
      padding: 15px 40px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-bottom: 1px solid #eee;
    }

    header h1 {
      color: #0b64c0;
      font-size: 20px;
    }

    nav a {
      margin-left: 20px;
      text-decoration: none;
      color: #333;
      font-weight: 500;
    }

    /* Navbar icons */
    .nav-icons {
      display: flex;
      align-items: center;
      gap: 15px;
      margin-left: 20px;
    }

    .nav-icons a {
      text-decoration: none;
      font-size: 20px;
      color: #333;
    }

    .nav-icons a:hover {
      color: #0b64c0;
    }


    /* Hero Section */
    .hero {
      position: relative;
      width: 100%;
      height: 80vh;
      overflow: hidden;
    }

    .hero-img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .hero-content {
      position: absolute;
      top: 50%;
      right: 5%;
      transform: translateY(-50%);
      background: rgba(173, 216, 230, 0.9);
      /* Light blue with opacity */
      padding: 30px;
      border-radius: 12px;
      max-width: 400px;
    }

    .hero-content .tag {
      font-size: 14px;
      letter-spacing: 2px;
      color: #333;
    }

    .hero-content h1 {
      font-size: 32px;
      font-weight: bold;
      color: #003366;
      margin: 10px 0;
    }

    .hero-content .desc {
      font-size: 14px;
      color: #333;
      margin-bottom: 20px;
    }

    .hero-content .shopnow-button {
      background: #003366;
      color: white;
      border: none;
      padding: 12px 24px;
      border-radius: 30px;
      cursor: pointer;
      font-weight: bold;
    }

    /* Features */
    .features {
      display: flex;
      justify-content: space-around;
      text-align: center;
      padding: 40px 8%;
      flex-wrap: wrap;
      gap: 20px;
    }

    .features div {
      flex: 1;
      min-width: 200px;
    }

    /* Inspiration */
    .section-title {
      text-align: center;
      font-size: 1.6rem;
      margin: 40px 0 10px;
    }

    .section-subtitle {
      text-align: center;
      color: #777;
      margin-bottom: 40px;
    }

    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 20px;
      padding: 0 8% 40px;
    }

    .grid img {
      width: 100%;
      border-radius: 10px;
    }

    /* Highlight Section */
    .highlight {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 60px 8%;
      flex-wrap: wrap;
      background: #f2f7fc;
    }

    .highlight div {
      max-width: 400px;
    }

    .highlight button {
      margin-top: 15px;
      background: #0b64c0;
      color: white;
      padding: 10px 20px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
    }

    .highlight img {
      max-width: 350px;
      width: 100%;
    }

    /* Footer */
    footer {
      background: #222;
      color: #aaa;
      text-align: center;
      padding: 20px;
      margin-top: 40px;
    }

    /* Responsive */
    @media (max-width: 768px) {

      .hero,
      .highlight {
        flex-direction: column;
        text-align: center;
      }

      header {
        flex-direction: column;
        gap: 10px;
      }
    }

    #welcome {
      text-align: center;
    }

    .shopnow-button a {
      text-decoration: none;
      color: white;
    }

    header h1 {
      color: #0b64c0;
      font-size: 22px;
      margin: 0;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    header h1 img {
      width: 40px;
      height: 40px;
      object-fit: contain;
    }
  </style>
</head>

