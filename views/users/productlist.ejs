<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SeatWorld - Product Gallery</title>
  <style>
    :root {
      --slate-50: #f5f7fb;
      --slate-100: #edf1f7;
      --slate-200: #dfe7f1;
      --slate-400: #94a3b8;
      --slate-500: #64748b;
      --slate-700: #1f2937;
      --primary: #2449ff;
      --accent: #0ea5e9;
    }

    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      font-family: "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
      background-color: var(--slate-50);
      color: var(--slate-700);
      line-height: 1.5;
    }

    a {
      text-decoration: none;
      color: inherit;
    }

    header {
      background: #fff;
      border-bottom: 1px solid var(--slate-100);
      position: sticky;
      top: 0;
      z-index: 20;
    }

    .top-nav {
      max-width: 1200px;
      margin: 0 auto;
      padding: 1rem 2rem;
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 1.5rem;
    }

    .brand {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      font-weight: 600;
      font-size: 1.1rem;
      color: var(--slate-700);
    }

    .brand img {
      width: 36px;
      height: 36px;
      object-fit: contain;
    }

    nav {
      display: flex;
      gap: 1.5rem;
      font-size: 0.95rem;
      color: var(--slate-500);
    }

    .nav-actions {
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }

    .search-pill {
      position: relative;
      background: var(--slate-100);
      padding: 0.5rem 0.75rem 0.5rem 2.25rem;
      border-radius: 999px;
      display: flex;
      align-items: center;
    }

    .search-pill input {
      border: none;
      background: transparent;
      outline: none;
      font-size: 0.95rem;
      width: 160px;
      color: var(--slate-700);
    }

    .search-pill svg {
      position: absolute;
      left: 0.8rem;
      width: 16px;
      height: 16px;
      color: var(--slate-400);
    }

    .icon-button {
      width: 36px;
      height: 36px;
      border-radius: 50%;
      border: 1px solid var(--slate-200);
      background: white;
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--slate-400);
      cursor: pointer;
    }

    .layout {
      max-width: 1200px;
      margin: 2rem auto 3rem;
      padding: 0 2rem;
      display: grid;
      grid-template-columns: 260px 1fr;
      gap: 2rem;
    }

    .filters-card {
      background: #fff;
      border-radius: 16px;
      padding: 1.5rem;
      box-shadow: 0 8px 30px rgba(15, 23, 42, 0.08);
      position: sticky;
      top: 90px;
      height: fit-content;
    }

    .filters-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 1.5rem;
    }

    .filters-header h3 {
      margin: 0;
      font-size: 1.1rem;
      color: var(--slate-700);
    }

    .filter-count {
      background: var(--slate-100);
      color: var(--slate-500);
      border-radius: 999px;
      padding: 0.2rem 0.75rem;
      font-size: 0.8rem;
    }

    .filter-block {
      margin-bottom: 1.75rem;
    }

    .filter-block h4 {
      margin: 0 0 0.75rem;
      font-size: 0.95rem;
      color: var(--slate-500);
    }

    .price-values {
      display: flex;
      gap: 0.75rem;
    }

    .price-values label {
      display: block;
      font-size: 0.8rem;
      color: var(--slate-400);
      margin-bottom: 0.25rem;
    }

    .price-values input {
      width: 100%;
      padding: 0.45rem 0.6rem;
      border-radius: 10px;
      border: 1px solid var(--slate-200);
      font-size: 0.9rem;
    }

    .slider-wrapper {
      position: relative;
      height: 38px;
      margin-top: 0.75rem;
    }

    .slider-track {
      position: absolute;
      top: 18px;
      left: 0;
      right: 0;
      height: 4px;
      background: var(--slate-200);
      border-radius: 999px;
    }

    .slider-track .progress {
      position: absolute;
      height: 100%;
      background: var(--primary);
      border-radius: 999px;
      left: 0;
      right: 0;
    }

    .range-inputs input[type="range"] {
      position: absolute;
      width: 100%;
      top: 0;
      left: 0;
      pointer-events: none;
      -webkit-appearance: none;
      appearance: none;
      background: none;
    }

    .range-inputs input[type="range"]::-webkit-slider-thumb {
      pointer-events: auto;
      width: 16px;
      height: 16px;
      border-radius: 50%;
      background: #fff;
      border: 2px solid var(--primary);
      -webkit-appearance: none;
    }

    .checkbox-list {
      display: flex;
      flex-direction: column;
      gap: 0.4rem;
    }

    .checkbox-item {
      display: flex;
      gap: 0.5rem;
      align-items: center;
      font-size: 0.9rem;
      color: var(--slate-600);
    }

    .checkbox-item input {
      width: 16px;
      height: 16px;
    }

    .filter-actions {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
      margin-top: 2rem;
    }

    .btn {
      border: none;
      border-radius: 999px;
      padding: 0.65rem;
      font-weight: 600;
      text-align: center;
      cursor: pointer;
      font-size: 0.95rem;
    }

    .btn-primary {
      background: var(--primary);
      color: #fff;
    }

    .btn-ghost {
      background: transparent;
      color: var(--slate-500);
      border: 1px solid var(--slate-200);
    }

    .products-area {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    .products-header {
      display: flex;
      justify-content: space-between;
      gap: 1rem;
      align-items: flex-start;
    }

    .heading h1 {
      margin: 0;
      font-size: 2rem;
      color: var(--slate-700);
    }

    .heading p {
      margin: 0.2rem 0 0;
      color: var(--slate-500);
      font-size: 0.95rem;
    }

    .sort-control {
      display: flex;
      flex-direction: column;
      gap: 0.4rem;
      font-size: 0.9rem;
      color: var(--slate-500);
    }

    .sort-select {
      min-width: 220px;
      border-radius: 999px;
      border: 1px solid var(--slate-200);
      padding: 0.55rem 1rem;
      font-size: 0.95rem;
      color: var(--slate-700);
      background: #fff;
      outline: none;
    }

    .products-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
      gap: 2.5rem 1.5rem;
    }

    .product-card {
      display: flex;
      flex-direction: column;
      text-decoration: none;
      color: inherit;
      background: transparent;
      border: none;
      box-shadow: none;
      padding: 0;
      transition: opacity 0.2s;
    }

    .product-card:hover {
      opacity: 0.85;
      transform: none;
      box-shadow: none;
    }

    .product-media {
      position: relative;
      background-color: #f3f4f6;
      border-radius: 12px;
      aspect-ratio: 1;
      overflow: hidden;
      margin-bottom: 1rem;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .product-media img {
      width: 100%;
      height: 100%;
      object-fit: contain;
      padding: 1.5rem;
      mix-blend-mode: multiply;
    }

    .placeholder-img {
      color: var(--slate-400);
      font-size: 0.9rem;
    }

    .product-name {
      font-size: 1rem;
      font-weight: 600;
      color: #1f2937;
      margin: 0 0 0.5rem 0;
      line-height: 1.4;
    }

    .price-block {
      display: flex;
      flex-direction: column;
      gap: 0.25rem;
    }

    .price-current {
      font-size: 0.95rem;
      font-weight: 600;
      color: #1f2937;
    }

    .original-price-row {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      font-size: 0.85rem;
      color: #64748b;
    }

    .price-old {
      text-decoration: line-through;
      color: #64748b;
      font-size: 0.85rem;
    }

    .discount-text {
      color: #64748b;
    }

    .status-text {
      font-size: 0.9rem;
      color: #64748b;
      margin-top: 0.25rem;
    }

    .pagination {
      margin: 2rem auto 0;
      display: flex;
      gap: 0.5rem;
      justify-content: center;
      align-items: center;
      flex-wrap: wrap;
    }

    .page-btn {
      min-width: 36px;
      height: 36px;
      padding: 0 0.5rem;
      border-radius: 8px;
      border: 1px solid var(--slate-200);
      background: #fff;
      color: var(--slate-500);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 0.9rem;
      font-weight: 500;
      transition: all 0.2s;
    }

    .page-btn:hover {
      border-color: var(--primary);
      color: var(--primary);
    }

    .page-btn.active {
      background: var(--primary);
      color: #fff;
      border-color: var(--primary);
    }

    .page-btn.prev-next {
      padding: 0 1rem;
      width: auto;
    }

    .page-dots {
      color: var(--slate-400);
      letter-spacing: 2px;
    }

    footer {
      border-top: 1px solid var(--slate-100);
      padding: 2rem;
      text-align: center;
      color: var(--slate-400);
      font-size: 0.9rem;
    }

    footer .links {
      display: flex;
      justify-content: center;
      gap: 2rem;
      margin-bottom: 1rem;
    }

    @media (max-width: 1024px) {
      .layout {
        grid-template-columns: 1fr;
      }

      .filters-card {
        position: static;
      }
    }

    @media (max-width: 768px) {
      .top-nav {
        flex-wrap: wrap;
        padding: 1rem;
      }

      nav {
        width: 100%;
        justify-content: center;
      }

      .search-pill input {
        width: 120px;
      }

      .products-header {
        flex-direction: column;
        align-items: flex-start;
      }
    }

    .pagination {
      margin: 2rem auto 0;
      display: flex;
      gap: 0.5rem;
      justify-content: center;
      align-items: center;
      flex-wrap: wrap;
    }
  </style>
</head>

<body>
  <header>
    <div class="top-nav">
      <div class="brand">

        <img src="https://res.cloudinary.com/dbdnmlzy6/image/upload/v1765945540/products/rmsn314w038gnfzmemmi.jpg"
          alt="SeatWorld logo" onerror="this.style.display='none'">
        <span>SeatWorld</span>
      </div>
      <nav>
        <a href="/dashboard">Home</a>
        <a href="/products">Products</a>
        <a href="/about">About</a>
      </nav>
      <div class="nav-actions">
        <label class="search-pill">
          <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path
              d="M15.5 14h-.79l-.28-.27c1-1.16 1.57-2.65 1.57-4.23A6 6 0 1 0 9.5 16c1.58 0 3.07-.57 4.23-1.57l.27.28v.79l4.75 4.74 1.5-1.5L15.5 14zm-6 0A4.5 4.5 0 1 1 14 9.5 4.51 4.51 0 0 1 9.5 14z" />
          </svg>
          <input form="productFilters" type="text" name="search" value="<%= filters?.search || '' %>"
            placeholder="Search">
        </label>
        <button class="icon-button">â™¡</button>
        <button class="icon-button">ðŸ›’</button>
        <button class="icon-button">â˜º</button>
      </div>
    </div>
  </header>
  <%- include('../partials/flash') %>

    <main class="layout">
      <aside class="filters-card">
        <div class="filters-header">
          <h3>Filters</h3>
          <% if (appliedFiltersCount) { %>
            <span class="filter-count">
              <%= appliedFiltersCount %>
            </span>
            <% } %>
        </div>
        <form id="productFilters" class="filters-form" action="/products" method="GET">
          <section class="filter-block">
            <h4>Price Range</h4>
            <div class="price-values">
              <div>
                <label for="minPriceInput">Min</label>
                <input type="number" id="minPriceInput" name="minPrice" min="<%= priceRange?.min ?? 0 %>"
                  max="<%= priceRange?.max ?? 0 %>" value="<%= filters?.minPrice ?? priceRange?.min ?? 0 %>">
              </div>
              <div>
                <label for="maxPriceInput">Max</label>
                <input type="number" id="maxPriceInput" name="maxPrice" min="<%= priceRange?.min ?? 0 %>"
                  max="<%= priceRange?.max ?? 0 %>" value="<%= filters?.maxPrice ?? priceRange?.max ?? 0 %>">
              </div>
            </div>
            <div class="slider-wrapper">
              <div class="slider-track">
                <div class="progress" id="priceProgress"></div>
              </div>
              <div class="range-inputs">
                <input type="range" id="minRange" min="<%= priceRange?.min ?? 0 %>" max="<%= priceRange?.max ?? 0 %>"
                  value="<%= filters?.minPrice ?? priceRange?.min ?? 0 %>" step="1">
                <input type="range" id="maxRange" min="<%= priceRange?.min ?? 0 %>" max="<%= priceRange?.max ?? 0 %>"
                  value="<%= filters?.maxPrice ?? priceRange?.max ?? 0 %>" step="1">
              </div>
            </div>
          </section>

          <section class="filter-block">
            <h4>Brand</h4>
            <div class="checkbox-list">
              <% if (brands?.length) { %>
                <% brands.forEach((brandName)=> { %>
                  <label class="checkbox-item">
                    <input type="checkbox" name="brand" value="<%= brandName %>" <%=filters?.brands?.includes(brandName)
                      ? "checked" : "" %>>
                    <span>
                      <%= brandName %>
                    </span>
                  </label>
                  <% }) %>
                    <% } else { %>
                      <p style="color: var(--slate-400); font-size: 0.85rem;">Brands coming soon.</p>
                      <% } %>
            </div>
          </section>

          <section class="filter-block">
            <h4>Category</h4>
            <div class="checkbox-list">
              <% if (categories?.length) { %>
                <% categories.forEach((categoryItem)=> { %>
                  <label class="checkbox-item">
                    <input type="checkbox" name="category" value="<%= categoryItem._id %>"
                      <%=filters?.categories?.includes(categoryItem._id.toString()) ? "checked" : "" %>>
                    <span>
                      <%= categoryItem.categoryName %>
                    </span>
                  </label>
                  <% }) %>
                    <% } else { %>
                      <p style="color: var(--slate-400); font-size: 0.85rem;">No categories available.</p>
                      <% } %>
            </div>
          </section>

          <div class="filter-actions">
            <button type="submit" class="btn btn-primary">Apply Filters</button>
            <a href="/products" class="btn btn-ghost">Clear Filters</a>
          </div>
        </form>
      </aside>

      <section class="products-area">
        <div class="products-header">
          <div class="heading">
            <p style="margin:0;color:var(--slate-400);font-size:0.9rem;">SeatWorld Collection</p>
            <h1>
              <%= filters?.heading || "Chairs" %>
            </h1>
            <p>
              <%= pagination?.totalItems ?? products.length %> results
            </p>
          </div>
          <div class="sort-control">
            <label for="sortSelect">Sort By</label>
            <select id="sortSelect" class="sort-select" name="sort" form="productFilters"
              onchange="document.getElementById('productFilters').requestSubmit();">
              <% (sortOptions || []).forEach((option)=> { %>
                <option value="<%= option.value %>" <%=(filters?.sort || 'featured' )===option.value ? "selected" : ""
                  %>>
                  <%= option.label %>
                </option>
                <% }) %>
            </select>
          </div>
        </div>

        <div class="products-grid">
          <% if (products && products.length) { %>
            <% products.forEach((product)=> {
              const basePrice = Number(product.price || 0);
              const variantPrice = Number(product.variant?.price ?? basePrice);
              const showDiscount = variantPrice > 0 && variantPrice < basePrice; const discountPercent=showDiscount &&
                basePrice ? Math.round((1 - variantPrice / basePrice) * 100) : 0; const isOutOfStock=product.stock <=0;
                %>
                <a href="/product/<%= product._id %>" class="product-card">
                  <div class="product-media">
                    <% if (product.image) { %>
                      <img src="<%= product.image %>" alt="<%= product.name %>">
                      <% } else { %>
                        <div class="placeholder-img">Image coming soon</div>
                        <% } %>
                  </div>
                  <h3 class="product-name">
                    <%= product.name %>
                  </h3>

                  <div class="price-block">
                    <% if (isOutOfStock) { %>
                      <span class="price-current">â‚¹<%= variantPrice.toFixed(2) %></span>
                      <span class="status-text">Out of Stock</span>
                      <% } else { %>
                        <span class="price-current">â‚¹<%= variantPrice.toFixed(2) %></span>
                        <% if (showDiscount) { %>
                          <div class="original-price-row">
                            <span class="price-old">â‚¹<%= basePrice.toFixed(2) %></span>
                            <span class="discount-text">
                              <%= discountPercent %>% off
                            </span>
                          </div>
                          <% } %>
                            <% } %>
                  </div>
                </a>
                <% }) %>
                  <% } else { %>
                    <div
                      style="grid-column: 1 / -1; text-align:center; background:#fffefe; padding:3rem; border-radius:20px;">
                      <h3 style="margin-bottom:0.5rem;">No products match your filters</h3>
                      <p style="color:var(--slate-500);">
                        Try adjusting your filters or clearing them to see more results.
                      </p>
                    </div>
                    <% } %>
        </div>

        <% if (pagination && pagination.totalPages> 1) { %>
          <div class="pagination">
            <% if (pagination.hasPrev) { %>
              <a class="page-btn prev-next"
                href="?page=<%= pagination.currentPage - 1 %><%= query ? '&' + query : '' %>">
                Previous
              </a>
              <% } %>

                <% for (let i=1; i <=pagination.totalPages; i++) { %>
                  <% if ( i===1 || i===pagination.totalPages || (i>= pagination.currentPage - 1 && i <=
                      pagination.currentPage + 1) ) { %>
                      <a class="page-btn <%= i === pagination.currentPage ? 'active' : '' %>"
                        href="?page=<%= i %><%= query ? '&' + query : '' %>">
                        <%= i %>
                      </a>
                      <% } else if (i===pagination.currentPage - 2 || i===pagination.currentPage + 2) { %>
                        <span class="page-dots">...</span>
                        <% } %>
                          <% } %>

                            <% if (pagination.hasNext) { %>
                              <a class="page-btn prev-next"
                                href="?page=<%= pagination.currentPage + 1 %><%= query ? '&' + query : '' %>">
                                Next
                              </a>
                              <% } %>
          </div>
          <% } %>
      </section>
    </main>

    <footer>
      <div class="links">
        <a href="/dashboard">Home</a>
        <a href="/products">Products</a>
        <a href="/about">About</a>
      </div>
      <p>Â© <%= new Date().getFullYear() %> SeatWorld. All rights reserved. </p>
    </footer>

    <script>
      const minRange = document.getElementById("minRange");
      const maxRange = document.getElementById("maxRange");
      const minInput = document.getElementById("minPriceInput");
      const maxInput = document.getElementById("maxPriceInput");
      const progress = document.getElementById("priceProgress");

      function clampRanges() {
        const min = Number(minRange.min);
        const max = Number(minRange.max);

        let minVal = Math.min(Number(minRange.value), Number(maxRange.value) - 1);
        let maxVal = Math.max(Number(maxRange.value), Number(minRange.value) + 1);
        minVal = Math.max(min, minVal);
        maxVal = Math.min(max, maxVal);

        minRange.value = minVal;
        maxRange.value = maxVal;
        minInput.value = minVal;
        maxInput.value = maxVal;

        const left = ((minVal - min) / (max - min)) * 100;
        const right = 100 - ((maxVal - min) / (max - min)) * 100;
        progress.style.left = left + "%";
        progress.style.right = right + "%";
      }

      if (minRange && maxRange) {
        clampRanges();
        minRange.addEventListener("input", clampRanges);
        maxRange.addEventListener("input", clampRanges);
      }

      if (minInput && maxInput) {
        minInput.addEventListener("change", () => {
          minRange.value = minInput.value || minRange.min;
          clampRanges();
        });
        maxInput.addEventListener("change", () => {
          maxRange.value = maxInput.value || maxRange.max;
          clampRanges();
        });
      }
    </script>
</body>

</html>