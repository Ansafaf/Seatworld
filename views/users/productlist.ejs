            <!-- Pagination Info -->
            <div class="pagination-info">
                <% 
                const currentPage = typeof pagination !== 'undefined' ? pagination.currentPage : 1;
                const totalPages = typeof pagination !== 'undefined' ? pagination.totalPages : 1;
                const totalItems = typeof pagination !== 'undefined' ? pagination.totalItems : (products ? products.length : 8);
                const itemsPerPage = typeof pagination !== 'undefined' ? pagination.itemsPerPage : 8;
                const startItem = ((currentPage - 1) * itemsPerPage) + 1;
                const endItem = Math.min(currentPage * itemsPerPage, totalItems);
                %>
                
                Showing <%= startItem %>-<%= endItem %> of <%= totalItems %> products
            </div>

            <!-- Pagination Controls -->
            <div class="pagination">
                <!-- Previous Button -->
                <% if (currentPage > 1) { %>
                    <a href="?page=<%= currentPage - 1 %><%= typeof query !== 'undefined' ? '&' + query : '' %>" 
                       class="pagination-btn">
                        ‚Üê Previous
                    </a>
                <% } else { %>
                    <button class="pagination-btn" disabled>‚Üê Previous</button>
                <% } %>

                <!-- Page Numbers -->
                <% 
                const maxVisiblePages = 5;
                let startPage = Math.max(1, currentPage - Math.floor(maxVisiblePages / 2));
                let endPage = Math.min(totalPages, startPage + maxVisiblePages - 1);
                
                if (endPage - startPage + 1 < maxVisiblePages) {
                    startPage = Math.max(1, endPage - maxVisiblePages + 1);
                }
                %>

                <!-- First page and ellipsis -->
                <% if (startPage > 1) { %>
                    <a href="?page=1<%= typeof query !== 'undefined' ? '&' + query : '' %>" 
                       class="pagination-btn">1</a>
                    <% if (startPage > 2) { %>
                        <span class="pagination-ellipsis">...</span>
                    <% } %>
                <% } %>

                <!-- Visible page numbers -->
                <% for (let i = startPage; i <= endPage; i++) { %>
                    <% if (i === currentPage) { %>
                        <span class="pagination-btn active"><%= i %></span>
                    <% } else { %>
                        <a href="?page=<%= i %><%= typeof query !== 'undefined' ? '&' + query : '' %>" 
                           class="pagination-btn"><%= i %></a>
                    <% } %>
                <% } %>

                <!-- Last page and ellipsis -->
                <% if (endPage < totalPages) { %>
                    <% if (endPage < totalPages - 1) { %>
                        <span class="pagination-ellipsis">...</span>
                    <% } %>
                    <a href="?page=<%= totalPages %><%= typeof query !== 'undefined' ? '&' + query : '' %>" 
                       class="pagination-btn"><%= totalPages %></a>
                <% } %>

                <!-- Next Button -->
                <% if (currentPage < totalPages) { %>
                    <a href="?page=<%= currentPage + 1 %><%= typeof query !== 'undefined' ? '&' + query : '' %>" 
                       class="pagination-btn">
                        Next ‚Üí
                    </a>
                <% } else { %>
                    <button class="pagination-btn" disabled>Next ‚Üí</button>
                <% } %>
            </div>
        </main>
    </div>

    <div class="overlay" id="overlay" onclick="toggleFilters()"></div>

    <script>
        function toggleFilters() {
            const filters = document.getElementById('filters');
            const overlay = document.getElementById('overlay');
            
            filters.classList.toggle('open');
            overlay.classList.toggle('open');
        }

        function addToCart(productId) {
            // Add to cart functionality
            alert(`Added product ${productId} to cart!`);
            // You can implement actual cart logic here
        }

        // Handle pagination clicks
        function goToPage(page) {
            const currentUrl = new URL(window.location);
            currentUrl.searchParams.set('page', page);
            window.location.href = currentUrl.toString();
        }

        // Close filters when clicking outside on mobile
        document.addEventListener('click', function(event) {
            const filters = document.getElementById('filters');
            const toggleBtn = document.querySelector('.mobile-filter-toggle');
            
            if (window.innerWidth <= 768 && 
                !filters.contains(event.target) && 
                !toggleBtn.contains(event.target)) {
                filters.classList.remove('open');
                document.getElementById('overlay').classList.remove('open');
            }
        });
    </script>
</body>
</html>