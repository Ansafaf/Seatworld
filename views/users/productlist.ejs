                </div>
            </div>

            <div class="filter-group">
                <h4>Brand</h4>
                <select class="filter-select">
                    <option>All Brands</option>
                    <% if (typeof brands !== 'undefined') { %>
                        <% brands.forEach(brand => { %>
                            <option value="<%= brand.id %>"><%= brand.name %></option>
                        <% }); %>
                    <% } %>
                </select>
            </div>
        </aside>

        <main class="main-content">
