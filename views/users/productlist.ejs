            <h3>Filters</h3>
            
            <div class="filter-group">
                <h4>Category</h4>
                <select class="filter-select">
                    <option>All Categories</option>
                    <% if (typeof categories !== 'undefined') { %>
                        <% categories.forEach(category => { %>
